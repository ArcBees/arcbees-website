<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="en">

    <ui:with field='res' type='com.arcbees.hive.client.resource.Resources'/>
    <ui:with field="nameTokens" type="com.arcbees.hive.client.place.NameTokens"/>

    <ui:style>
        body .root {
            width: 796px;
            background-color: #c5932c;
            margin: 10px auto 10px auto;
            padding: 30px 50px 15px 50px;
            font-size: 13px;
            font-family: "Verdana";
            text-align: left;
            color: #4b3c30;
            height: auto;
        }

        .root a {
            color: #ffffff;
            display: block;
            line-height: 15px;
        }

        .root > div:first-child {
            float: left;
            margin-left: 0;
        }

        .root > div {
            float: left;
            margin-left: 40px;
        }

        .root p {
            text-transform: uppercase;
            margin-bottom: 12px;
        }

        .root a:HOVER {
            color: #4b3c30;
        }

        .root .copyright {
            padding-top: 20px;
            text-align: center;
            font-size: 10px;
            clear: both;
            float: none;
        }

        .root .news {
            width: 350px;
            height: 103px;
            overflow: hidden;
        }

        .root .nav {
            width: 142px;
        }


    </ui:style>
    <g:HTMLPanel addStyleNames="{style.root} {res.style.bulleBgFooter} {res.style.cornerTopBottom}">
        <g:HTMLPanel addStyleNames="{style.nav}">
            <p>ArcBees</p>
            <a href="#{nameTokens.getService}">Services</a>
            <a href="#{nameTokens.getUxdesign}">
                <ui:msg description="Footer navbar > UX Design">UX Design</ui:msg>
            </a>
            <a href="#{nameTokens.getProduct}">
                <ui:msg description="Footer navbar > Products">Products</ui:msg>
            </a>

            <a href="#{nameTokens.getAbout}">
                <ui:msg description="Footer navbar > Our Team">Our Team</ui:msg>
            </a>
            <a href="#{nameTokens.getCompanyhistory}">
                <ui:msg description="Footer navbar > Compagny History">Compagny History</ui:msg>
            </a>
            <a href="#{nameTokens.getJob}">
                <ui:msg description="Footer navbar > Job Opportunities">Job
                    Opportunities
                </ui:msg>
            </a>
            <a href="#{nameTokens.getContact}">
                <ui:msg description="Footer navbar > Contact Us">Contact Us</ui:msg>
            </a>
        </g:HTMLPanel>
        <g:HTMLPanel>
            <p>
                <ui:msg description="Footer projects">Projects</ui:msg>
            </p>
            <a href="http://code.google.com/p/gwt-platform/">GWT-Platform</a>
            <a href="http://code.google.com/p/jukito/">Jukito</a>
            <a href="#">GAE Studio</a>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="recentNews" addStyleNames="{style.news}">
            <p>
                <ui:msg description="Footer news">Recent News</ui:msg>
            </p>
        </g:HTMLPanel>
        <g:HTMLPanel>
            <p>
                <ui:msg description="Footer social">Follow Us</ui:msg>
            </p>
            <a href="http://www.facebook.com/pages/ArcBees/201744089861261" target="_blank">Facebook</a>
            <a href="http://twitter.com/arcbees" target="_blank">Twitter</a>
            <a href="http://www.linkedin.com/company/arcbees?trk=fc_badge" target="_blank">LinkedIn</a>
            <a href="http://arcbees.wordpress.com/" target="_blank">
                <ui:msg description="Footer social > Our Blog">Our Blog</ui:msg>
            </a>
            <a href="https://picasaweb.google.com/104570359870395949420" target="_blank">
                <ui:msg description="Footer social > Event Pics">Event Pics</ui:msg>
            </a>
        </g:HTMLPanel>

        <g:HTMLPanel addStyleNames="{style.copyright}">
            &copy; 2012 ArcBees.
            <ui:msg description="Footer copyright">All rights reserved.</ui:msg>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
