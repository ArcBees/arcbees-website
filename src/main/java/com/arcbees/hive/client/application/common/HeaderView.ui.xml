<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='nameTokens' type='com.arcbees.hive.client.place.NameTokens'/>
    <ui:with field='res' type='com.arcbees.hive.client.Resources'/>

    <ui:style>
        .menuContainer {
            height: 25px;
        }

        .hyperlinkContainer {
            float: right;
        }

        .menuStyle {
            font-family: "Verdana";
            font-variant: small-caps;
            font-size: 16px;
        }

        .menuStyle div {
            display: inline;
        }

        .menuStyle div a {
            margin-top: 5px;
            margin-left: 15px;
            margin-right: 15px;
            color: #ffffff;
            text-decoration: none;
        }

        .menuStyle div a:hover {
            color: #4b3c30;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:Image ui:field="header" resource="{res.head}"
                 addStyleNames="{res.style.cursor}"/>
        <g:HTMLPanel addStyleNames="{style.menuContainer}">
            <div class="{style.hyperlinkContainer} {style.menuStyle}">
                <g:Hyperlink targetHistoryToken="{nameTokens.getService}">Services
                </g:Hyperlink>
                <g:Hyperlink targetHistoryToken="{nameTokens.getProduct}">Products
                </g:Hyperlink>
                <g:Hyperlink targetHistoryToken="{nameTokens.getJob}">Job
                    Opportunities
                </g:Hyperlink>
                <g:Hyperlink targetHistoryToken="{nameTokens.getContact}">Contact Us
                </g:Hyperlink>
            </div>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
