@require "colors";
@require "geometria";
@require "gsss-mixins";
@require "gsss-animation";

/* -- Page : expertises ---------------------------------------- */

.expertises {
    background-color: C_STRIPE_LIGHT;
}

/* -- Header animation ---------------------------------------- */

.expertises .header > div {
    margin-top: -215px;

    position: absolute;
    top: 50%;
    left: 50%;
}

.expertises .header i.icon1,
.expertises .header i.icon2 {
    font-size: 26rem;

    margin: 40px -120px 0 0;

    right: 50%;
    position: absolute;

    @mixin animation_delay(.5s);
    @mixin animation_duration(1s);
}

.expertises .header div.icon3 {
    margin: 15px -115px 0;
    width: 230px;

    right: 50%;
    position: absolute;

    @mixin animation_delay(1.5s);
    @mixin animation_duration(4s);
}

.codeAnim1 {
    @mixin animation_name(logo1);
}

@-webkit-keyframes logo1 {
    0% {transform: rotate(0deg) translate(0px, 0px);}
    50% {transform: rotate(-90deg) translate(0px, 0px);}
    100% {transform: rotate(-90deg) translate(0px, -262px);}
}

@-webkit-keyframes logo1Mobile {
    0% {transform: rotate(0deg) translate(0px, 0px);}
    50% {transform: rotate(-90deg) translate(0px, 0px);}
    100% {transform: rotate(-90deg) translate(0px, -110px);}
}

.codeAnim2 {
    @mixin animation_name(logo2);
}

@-webkit-keyframes logo2 {
    0% {transform: rotate(0deg) translate(0px, 0px);}
    50% {transform: rotate(90deg) translate(0px, 0px);}
    100% {transform: rotate(90deg) translate(0px, -285px);}
}

@-webkit-keyframes logo2Mobile {
    0% {transform: rotate(0deg) translate(0px, 0px);}
    50% {transform: rotate(90deg) translate(0px, 0px);}
    100% {transform: rotate(90deg) translate(0px, -108px);}
}

.codeAnim3 {
    @mixin animation_name(slash);
}

@-webkit-keyframes slash {
    0% {opacity: 0;}
    100% {opacity: 1;}
}

@media (max-width: 649px) {
    .header {
        -webkit-background-size: 90% auto;
        background-size: 90% auto;

        min-height: 200px;
    }

    .expertises .header i.icon1,
    .expertises .header i.icon2 {
        font-size: 10rem;

        margin: 40px -50px 0 0;
    }

    .expertises .header > div {
        margin-top: -115px;
    }

    .expertises .header div.icon3 {
        margin-top: 38px;

        zoom: .45;
    }

    .codeAnim1 {
    @mixin animation_name(logo1Mobile);
    }

    .codeAnim2 {
    @mixin animation_name(logo2Mobile);
    }
}

/* -- what we do -- */

.services h3 span,
.services a span {
    display: block;
}

.services h3 {
    margin-top: 10px;
}

.services a {
    margin-bottom: 60px;
}

/* -- Tools -- */

.tools i {
    font-size: 11rem;

    display: block;
    margin-bottom: 30px;
}

.plus,
.equal {
    font-size: 8rem;
    font-family: geometriaBold;

    margin-left: -25px;

    position: absolute;
    top: -108px;
    left: 50%;
}

.equal {
    top: auto;
    bottom: -119px;
}

@media (max-width: 649px) {
    .tools i {
        font-size: 8rem;
    }

    .plus {
        font-size: 5rem;

        margin-left: -13px;
        top: -57px;

    }

    .equal,
    .equal::after {
        font-size: 5rem;

        margin-left: -14px;

        bottom: -60px;
    }
}
