<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
        ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
        ui:generateLocales="default">

    <ui:import field="com.arcbees.website.client.NameTokens.*"/>

    <ui:with field="res" type="com.arcbees.website.client.resources.AppResources"/>
    <ui:with field="fonts" type="com.arcbees.website.client.resources.FontResources"/>

    <g:HTMLPanel>
        <div class="{res.style.sidebar}" ui:field="sidebar">
            <nav role="navigation" class="{res.style.menu}">
                <ul>
                    <li>
                        <a href="#{HOME}" class="{fonts.icons.iconArcbeesName} {res.style.backHome}">
                            <span class="{res.style.hidden}">Back to homepage</span>
                        </a>
                    </li>
                    <li class="{res.style.menuStart}">
                        <a href="#{HOME}">About</a>
                    </li>
                    <li>
                        <a href="#{EXPERTISE}">Expertise</a>
                    </li>
                    <li>
                        <a href="#{SERVICES}">Services</a>
                    </li>
                    <li>
                        <a href="#{PRODUCTS}">Products</a>
                        <ul>
                            <li>
                                <a href="#{GAE}" class="{fonts.icons.iconGae}">GAE Studio</a>
                            </li>
                            <li>
                                <a href="#{GWTP}" class="{fonts.icons.iconGwtp}">GWTP</a>
                            </li>
                            <li>
                                <a href="#{JUKITO}" class="{fonts.icons.iconJukito}">Jukito</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#{SUPPORT}">Support</a>
                    </li>
                    <li>
                        <a href="#{BEES}">Our bees</a>
                    </li>
                    <li>
                        <a href="#{CAREERS}">Careers</a>
                    </li>
                    <li>
                        <a href="#{CONTACT}" class="{res.style.menuContact}">Contact</a>
                    </li>
                    <li>
                        <a href="#{DEVELOPERS}">Developers</a>
                    </li>
                </ul>
            </nav>
            <nav class="{res.style.socialmedias}">
                <ul>
                    <li>
                        <a href="#" class="{fonts.icons.iconFb}">
                            <span class="{res.style.hidden}">Facebook</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="{fonts.icons.iconTwitter}">
                            <span class="{res.style.hidden}">Twitter</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="{fonts.icons.iconGPlus}">
                            <span class="{res.style.hidden}">Google</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="{fonts.icons.iconLkd}">
                            <span class="{res.style.hidden}">LinkedIn</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="{fonts.icons.iconGitHub}">
                            <span class="{res.style.hidden}">GitHub</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="{fonts.icons.iconWordpress}">
                            <span class="{res.style.hidden}">Wordpress</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

        <div ui:field="menuToggle" class="{res.style.menuToggle}">
            <a href="#">
                <span></span>
                <span></span>
                <span></span>
            </a>
        </div>

        <div class="{res.style.content}" ui:field="content">
            <div style="position: absolute;right: 0;cursor:pointer;z-index:1000" ui:field="langToggle">
                <ui:msg description="Français">Français</ui:msg>
            </div>
            <!-- Main content -->
            <g:SimplePanel ui:field="main" styleName="{res.style.main}"/>

            <footer class="{res.style.footer}">
                <p>
                    <i class="{fonts.icons.iconArcbees}">
                        <span class="{res.style.hidden}">Arcbees</span>
                    </i>
                    Architects of simplicity
                </p>
            </footer>

        </div>

    </g:HTMLPanel>
</ui:UiBinder>
