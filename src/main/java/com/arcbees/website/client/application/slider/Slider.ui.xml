<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="sliderResources" type="com.arcbees.website.client.resources.SliderResources"/>
    <ui:with field="fonts" type="com.arcbees.website.client.resources.FontResources"/>

    <g:HTMLPanel styleName="{sliderResources.style.slider}">
        <g:HTMLPanel ui:field="contents" styleName="{sliderResources.style.container}"></g:HTMLPanel>
        <g:HTMLPanel ui:field="nav" tag="nav">
            <g:Anchor ui:field="prev" href="javascript:;" styleName="{sliderResources.style.prev} {sliderResources.style.disabled}">
                <i class="{fonts.icons.iconArrowDown}"></i>
                <ui:msg description="TabDetailsView Prev">
                    <span>Prev</span>
                </ui:msg>
            </g:Anchor>
            <g:Anchor ui:field="next" href="javascript:;" styleName="{sliderResources.style.next}">
                <i class="{fonts.icons.iconArrowDown}"></i>
                <ui:msg description="TabDetailsView Next">
                    <span>Next</span>
                </ui:msg>
            </g:Anchor>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="pager" styleName="{sliderResources.style.pager}"></g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
