<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='res' type='com.arcbees.hive.client.resource.Resources'/>
    <ui:with field="customers" type="com.arcbees.hive.client.resource.customers.CustomersResources"/>
    <ui:style>
        .root {
            width: 896px;
            background-color: #ffffff;
            margin: 10px auto 0 auto;
            position: relative;
        }

        .previous {
            left:30px;
        }
        .next {
            right:30px;
        }
        .previous, .next {

            position: absolute;
            top:40px;

        }
        .carousel {
            margin: auto;
        }

        .carrouselContainer {
            margin-top: 25px;
        }

        .carrouselContainer p {
            text-align: center;
            color: #777;

        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.root} {res.style.cornerTopBottom}">
        <div id="container" class="{style.carrouselContainer}">

            <div id="carousel" class="{style.carousel}">
                <a href="http://getbookedin.com/" target="_blank">
                    <g:Image resource="{customers.sliderClientBookedin}"/>
                </a>
                <a href="http://cobratag.com/" target="_blank">
                    <g:Image resource="{customers.sliderClientCobratag}"/>
                </a>
                <a href="http://www.protorisk.com/" target="_blank">
                    <g:Image resource="{customers.sliderClientProtorisk}"/>
                </a>
                <a href="http://www.sceneverse.com/" target="_blank">
                    <g:Image resource="{customers.sliderClientSceneverse}"/>
                </a>
                <a href="http://www.storeplacer.com/" target="_blank">
                    <g:Image resource="{customers.sliderClientStoreplacer}"/>
                </a>
                <a href="http://www.storeplacer.com/" target="_blank">
                    <g:Image resource="{customers.sliderClientStoreplacer}"/>
                </a>
                <a href="http://www.storeplacer.com/" target="_blank">
                    <g:Image resource="{customers.sliderClientStoreplacer}"/>
                </a>
                <a href="http://www.storeplacer.com/" target="_blank">
                    <g:Image resource="{customers.sliderClientStoreplacer}"/>
                </a>
            </div>
            <a href="#" id="ui-carousel-prev" class="{style.previous}">
                <g:Image resource="{customers.sliderFlecheGauche}"/>
            </a>
            <a href="#" id="ui-carousel-next" class="{style.next}">
                <g:Image resource="{customers.sliderFlecheDroite}"/>
            </a>
            <p>Customers who recommend our experience, be it ArcBees services or products!</p>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
