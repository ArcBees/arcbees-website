<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ahive_socmedia='urn:import:com.arcbees.hive.client.application.common.socialmedia'
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="en">

    <ui:with field='nameTokens' type='com.arcbees.hive.client.place.NameTokens'/>
    <ui:with field='res' type='com.arcbees.hive.client.resource.Resources'/>
    <ui:style>
        .headerContainer {
            position: relative;
            width: inherit;
            height: 152px;
        }

        .rightLinkBox {
            position: absolute;
            right: 25px;
            top: 15px;
        }

        .rightLinkBox p {
            margin: 0;
        }

        .rightLinkBox>a, .rightLinkBox>p, .rightLinkBox>div {
            float: right;
            clear: both;
            margin-top: 2px;
        }

        .localeSwitcher {
            text-decoration: none;
            color: #9f9f9f;
        }

        .localeSwitcher:HOVER {
            color: #5f5f5f;
        }

        .imgLogo {
            margin: 25px 50px 25px 25px;
        }

        .quote {
            width: 400px;
            position: absolute;
            top: 30px;
            left: 270px;
            font-family: 'Shadows Into Light', cursive;
            font-size: 20px;
            word-spacing: 1px;
            letter-spacing: 1px;
            color: #545f67;
        }

        .quote span {
            font-size: 15px;
            float: right;
            margin-top: 4px;
            margin-right: 30px;

        }

        .imgBeeFlying {
            position: absolute;
            top: 30px;
            left: 690px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.headerContainer} {res.style.headerBg} {res.style.cornerBottom}">
        <a href="#">
            <g:Image resource="{res.logoArcbees}" addStyleNames="{style.imgLogo}"/>
        </a>
        <p class="{style.quote}">
            « The regular structure of the bees is the most economical polygon »
            <span>- Fejes Toth</span>
        </p>
        <g:Image resource="{res.beeFlying}" addStyleNames="{style.imgBeeFlying}"/>
        <div class="{style.rightLinkBox}">
            <p>
                1.418.473.1216
            </p>
            <ahive_socmedia:SocialMediaWidget ui:field="socialMediaWidget"/>
            <a ui:field="swithcLocaleHyperlink" href="?locale=fr" class="{style.localeSwitcher}">
                <ui:msg description="Locale hyperlink in header">Français</ui:msg>
            </a>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
