<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="com.arcbees.hive.client.resource.Resources"/>

    <ui:style>
        .gwtHtml5Cloud {
            margin-left: auto;
            margin-right: auto;
        }

        .minHeight {
            height: 400px;
        }
    </ui:style>

    <g:HTMLPanel styleName="{res.style.blogBackground}">
        <div class="{res.style.blogLeftFull}"/>
        <div class="{res.style.blogRightFull}"/>

        <div class="{res.style.mainSection} {style.minHeight}">
            <g:Image resource="{res.gwtHtml5Cloud}" addStyleNames="{style.gwtHtml5Cloud}"/>
        </div>
        <div class="{res.style.blogDown}"/>
    </g:HTMLPanel>
</ui:UiBinder> 
