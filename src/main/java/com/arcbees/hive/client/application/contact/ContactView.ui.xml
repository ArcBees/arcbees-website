<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ahive_socmedia='urn:import:com.arcbees.hive.client.application.common.socialmedia'
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="en">

    <ui:with field="res" type="com.arcbees.hive.client.resource.Resources"/>
    <ui:style>
        body .root {
            position: relative;
            height: 420px;
        }

        .contactInfo {
            position: absolute;
            left: 130px;
            top: 240px;
        }

        .message {
            position: absolute;
            left: 450px;
            top: 60px;
            width: 400px;
        }

        .message input {
            display: block;
            width: inherit;
            height: 40px;
            border: none;
            margin-bottom: 10px;
            padding-left: 10px;
            color: #838383;
            font-family: Arial;
        }

        .message textarea {
            display: block;
            width: inherit;
            height: 200px;
            border: none;
            padding: 0px;
            padding-left: 10px;
            padding-top: 10px;
            margin-bottom: 10px;
            overflow-y: auto;
            resize: none;
            color: #838383;
            font-family: Arial;
        }

        .message button {
            float: right;
            width: 90px;
            height: 40px;
            font-size: 1.2em;
        }
    </ui:style>
    <g:HTMLPanel
            addStyleNames="{res.style.mainSectionContainer} {res.style.contactUS} {res.style.cornerBottom} {style.root}">
        <div class="{style.contactInfo}">
            <ahive_socmedia:SocialMediaWidget ui:field="socialMediaWidget"/>
            <p>
                <ui:msg description="Contact Us > Email">Email:</ui:msg>

                <a href="mailto:queenbee@arcbees.com">queenbee@arcbees.com</a>
                <br/>
                <ui:msg description="Contact Us > Phone">Phone:</ui:msg>
                418-473-1216
            </p>
        </div>
        <div class="{style.message}">
            <g:TextBox ui:field="senderTextBox" addStyleNames="{res.style.cornerTopBottom}"/>
            <g:TextArea ui:field="contentsTextArea" addStyleNames="{res.style.cornerTopBottom}"/>
            <g:Button ui:field="sendButton" addStyleNames="{res.style.cornerTopBottom} btn btn-warning">
                <ui:msg description="Contact Us > Send">Send</ui:msg>
            </g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
