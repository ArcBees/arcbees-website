<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="en">

    <ui:with field='nameTokens' type='com.arcbees.hive.client.place.NameTokens'/>
    <ui:with field='res' type='com.arcbees.hive.client.Resources'/>

    <ui:style>
        .headerContainer {
            width: 950px;
        }

        .menuContainer {
            width: inherit;
            height: 30px;
            font-family: "Verdana";
            font-variant: small-caps;
            font-size: 17px;
            text-indent: 30px;
        }

        .menuContainer div a {
            margin-top: 5px;
            margin-left: 15px;
            margin-right: 15px;
            color: #9f9f9f;
            text-decoration: none;
        }

        .menuContainer div a:hover {
            color: #5f5f5f;
        }

        .navPrincipale {
            float: right;
        }

        .menuImageGauche {
            width: 8px;
            float: left;
        }

        .menuImageDroite {
            width: 8px;
            float: left;
        }

        .divMilieu {
            width: 934px;
            display: inline-block;
            float: left;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.headerContainer}">
        <g:Image ui:field="header" resource="{res.head}"
                 addStyleNames="{res.style.cursor}"/>
        <div class="{style.menuContainer}">
            <g:Image resource="{res.navPrincipaleGauche}" addStyleNames="{style.menuImageGauche}"/>
            <div class="{res.style.navPrincipaleMilieuSprite} {style.divMilieu} ">
                <div class="{style.navPrincipale}">
                    <ui:msg description="this is simple test">Hello</ui:msg>
                    <a href="#{nameTokens.getService}">Services</a>
                    <a href="#{nameTokens.getProduct}">Products</a>
                    <a href="#{nameTokens.getJob}">Job Opportunities</a>
                    <a href="#{nameTokens.getContact}">Contact Us</a>
                </div>
            </div>
            <g:Image resource="{res.navPrincipaleDroite}" addStyleNames="{style.menuImageDroite}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
