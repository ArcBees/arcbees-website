<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="com.arcbees.hive.client.resource.Resources"/>

    <ui:style>
        .gwtHtml5Cloud {
            margin-left: auto;
            margin-right: auto;
        }

        .wrapper {
            text-align: center;
            height: 400px;
        }

        .introParagraph {
            margin: 0px auto 30px auto;
            width: 600px;
        }
    </ui:style>

    <g:HTMLPanel styleName="{res.style.blogBackground}">
        <div class="{res.style.blogLeftFull}"/>
        <div class="{res.style.blogRightFull}"/>

        <div class="{res.style.mainSection} {style.wrapper}">
            <h2>Have a new web project? Need to redesign your architecture?</h2>
            <h3 class="{style.introParagraph}">With ArcBees, your company may spend more time doing what it does best while we provide you simple web
                solutions that meet your needs. We are specialists in GWTP, UX design and Cloud Computing
            </h3>
            <g:Image resource="{res.gwtHtml5Cloud}" addStyleNames="{style.gwtHtml5Cloud}"/>
        </div>
        <div class="{res.style.blogDown}"/>
    </g:HTMLPanel>
</ui:UiBinder> 
