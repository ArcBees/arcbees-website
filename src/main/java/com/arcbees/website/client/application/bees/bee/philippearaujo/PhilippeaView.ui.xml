<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:seo="urn:import:com.arcbees.seo.widget"
        ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
        ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
        ui:generateLocales="default">

    <ui:with field="res" type="com.arcbees.website.client.resources.AppResources"/>
    <ui:with field="page" type="com.arcbees.website.client.resources.PageBeesResources"/>
    <ui:with field="fonts" type="com.arcbees.website.client.resources.FontResources"/>

    <g:HTMLPanel>

        <seo:SeoWidget>
            <seo:Title>
                <ui:msg description="SEO - Bees - Philippe A - title">Philippe Araujo - Arcbees</ui:msg>
            </seo:Title>
            <seo:Description>
                <ui:msg description="SEO - Bees - Philippe A - description">
                    Business Knight
                </ui:msg>
            </seo:Description>
            <seo:Og>
                <seo:OgImage height="241" width="285">http://www.arcbees.com/img/philippe-araujo.jpg</seo:OgImage>
            </seo:Og>
        </seo:SeoWidget>

        <div class="{page.style.bee} {page.style.bee1}">
            <div class="{page.style.beeHolder1}">
                <div class="{page.style.beeHolder2}">
                    <g:Image resource="{page.beePhilippeA2}"></g:Image>
                </div>
            </div>
        </div>

        <h1>Philippe Araujo
            <span><ui:msg description="Philippe Araujo's title">Business Knight</ui:msg></span>
        </h1>

        <div class="{res.grid.row} {res.style.clearfix}">
            <div class="{res.grid.col} {res.grid.col_6} {res.grid.col_t_12} {page.style.colGauche}">
                <h2>
                    <ui:msg description="Professional achievements:">Professional achievements</ui:msg>
                </h2>
                <ul>
                    <ui:msg description="Philippe Araujo's prof achievements">
                        <li>Developed a framework for gamification.</li>
                        <li>Speaker for Entretien Jacques-Cartier in Lyon on smart cities.</li>
                        <li>MBA Games winner with the Laval University team.</li>
                        <li>My motto in life : Work hard, have fun, customers come first.</li>
                    </ui:msg>
                </ul>
            </div>
            <div class="{res.grid.col} {res.grid.col_6} {res.grid.col_t_12} {page.style.colDroite}">
                <h2>
                    <ui:msg description="Personal achievements:">Personal achievements</ui:msg>
                </h2>
                <ul>
                    <ui:msg description="Philippe Araujo's pers achievements">
                        <li>I was the marriage officiant for my two best friends.</li>
                        <li>Avid TV show hunter.</li>
                        <li>I am my biggest fan!</li>
                    </ui:msg>
                </ul>
            </div>
        </div>

        <ul class="{page.style.social}">
            <li>
                <a href="http://ca.linkedin.com/in/philippearaujo" target="_blank">
                    <i class="{fonts.icons.iconLkd}"></i>
                    <span>Profil LinkedIn de Philippe Araujo</span>
                </a>
            </li>
            <li>
                <a href="https://plus.google.com/106730157230512780320/posts" target="_blank">
                    <i class="{fonts.icons.iconGPlus}"></i>
                    <span>Profil Google+ de Philippe Araujo</span>
                </a>
            </li>
        </ul>

    </g:HTMLPanel>
</ui:UiBinder>
