<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:seo="urn:import:com.arcbees.seo.widget"
        ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
        ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
        ui:generateLocales="default">

    <ui:with field="res" type="com.arcbees.website.client.resources.AppResources"/>
    <ui:with field="page" type="com.arcbees.website.client.resources.PageBeesResources"/>
    <ui:with field="fonts" type="com.arcbees.website.client.resources.FontResources"/>

    <g:HTMLPanel>

        <seo:SeoWidget>
            <seo:Title>
                <ui:msg description="SEO - Bees - JC - title">Jean-Christophe Larivière - Arcbees</ui:msg>
            </seo:Title>
            <seo:Description>
                <ui:msg description="SEO - Bees - JC - description">
                    Coder in the North
                </ui:msg>
            </seo:Description>
            <seo:Og>
                <seo:OgImage height="241" width="285">http://www.arcbees.com/img/jean-christophe-lariviere.jpg</seo:OgImage>
            </seo:Og>
        </seo:SeoWidget>

        <div class="{page.style.bee} {page.style.bee1}">
            <div class="{page.style.beeHolder1}">
                <div class="{page.style.beeHolder2}">
                    <g:Image resource="{page.beeJeanChristophe2}"></g:Image>
                </div>
            </div>
        </div>

        <h1>Jean-Christophe Larivière
            <span><ui:msg description="Jean-Christophe's title">Coder in the North</ui:msg></span>
        </h1>

        <div class="{res.grid.row} {res.style.clearfix}">
            <div class="{res.grid.col} {res.grid.col_6} {res.grid.col_t_12} {page.style.colGauche}">
                <h2>
                    <ui:msg description="Professional achievements:">Professional achievements</ui:msg>
                </h2>
                <ul>
                    <ui:msg description="Jean-Christophe's prof achievements">
                        <li>Offensive security certified professional.</li>
                        <li>Remote work : success.</li>
                        <li>Once scored against Christian at foosball.</li>
                    </ui:msg>
                </ul>
            </div>
            <div class="{res.grid.col} {res.grid.col_6} {res.grid.col_t_12} {page.style.colDroite}">
                <h2>
                    <ui:msg description="Personal achievements:">Personal achievements</ui:msg>
                </h2>
                <ul>
                    <ui:msg description="Jean-Christophe's pers achievements">
                        <li>Proud dad of a little girl.</li>
                        <li>Can make an LED blink with an Arduino.</li>
                        <li>Swam and got towed by 2 dolphins.</li>
                    </ui:msg>
                </ul>
            </div>
        </div>

        <ul class="{page.style.social}">
            <li>
                <a href="http://ca.linkedin.com/in/jclariviere" target="_blank">
                    <i class="{fonts.icons.iconLkd}"></i>
                    <span>Profil LinkedIn de Jean Christophe Larivière</span>
                </a>
            </li>
            <li>
                <a href="https://plus.google.com/106356483503589219450/posts" target="_blank">
                    <i class="{fonts.icons.iconGPlus}"></i>
                    <span>Profil Google+ de Jean Christophe Larivière</span>
                </a>
            </li>
        </ul>

    </g:HTMLPanel>
</ui:UiBinder>
