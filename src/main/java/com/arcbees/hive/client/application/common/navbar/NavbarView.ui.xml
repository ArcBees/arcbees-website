<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="en">
    <ui:with field='res' type='com.arcbees.hive.client.resource.Resources'/>
    <ui:with field='nameTokens' type='com.arcbees.hive.client.place.NameTokens'/>
    <ui:style>
        .menuContainer {
            width: inherit;
            height: 30px;
            font-family: "Verdana";
            font-size: 17px;
            line-height: 30px;
            margin-top: 15px;
        }

        .menuContainer div a {
            color: #9f9f9f;
            height: 30px;
            overflow: hidden;
            float: left;
            position: relative;
        }

        .menuContainer div a:hover span:first-child {
            color: #9f9f9f;
        }

        .menuContainer div a:hover span {
            color: #f1f1f1;
        }

        .menuContainer a span {
            padding-left: 15px;
            padding-right: 15px;
            position: relative;
            height: 30px;
            float: left;
            clear: both;
            transition: bottom 0.25s linear;
            -webkit-transition: bottom 0.25s linear;
            -moz-transition: bottom 0.25s linear;
            -o-transition: bottom 0.25s linear;
        }

        .menuContainer div span:first-child {
            background: none;
        }

        .menuContainer div a:hover span {
            bottom: 30px;
        }

        .navPrincipale {
            float: right;
            margin-right: 15px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.menuContainer} {res.style.cornerTop} {res.style.navBarBgSprite}">
        <div class="{style.navPrincipale}">
            <a href="#{nameTokens.getService}">
                <span>Services</span>
                <span class="{res.style.navBarBgHoverSprite}">Services</span>
            </a>
            <a href="#{nameTokens.getProduct}">
                <span>
                    <ui:msg description="Main navbar > Products">Products</ui:msg>
                </span>
                <span class="{res.style.navBarBgHoverSprite}">
                    <ui:msg description="Main navbar > Products">Products</ui:msg>
                </span>
            </a>
            <a href="#{nameTokens.getUxdesign}">
                <span>
                    <ui:msg description="Main navbar > Ux design">UX Design</ui:msg>
                </span>
                <span class="{res.style.navBarBgHoverSprite}">
                    <ui:msg description="Main navbar > Ux design">UX Design</ui:msg>
                </span>
            </a>
            <a href="#{nameTokens.getTeam}">
                <span>
                    <ui:msg description="Main navbar > Our Team">Our Team</ui:msg>
                </span>
                <span class="{res.style.navBarBgHoverSprite}">
                    <ui:msg description="Main navbar > Our Team">Our Team</ui:msg>
                </span>
            </a>
            <a href="#{nameTokens.getContact}">
                <span>
                    <ui:msg description="Main navbar > Contact Us">Contact Us</ui:msg>
                </span>
                <span class="{res.style.navBarBgHoverSprite}">
                    <ui:msg description="Main navbar > Contact Us">Contact Us</ui:msg>
                </span>
            </a>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
