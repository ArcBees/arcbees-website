<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="com.arcbees.website.client.resources.AppResources"/>
    <ui:with field="page" type="com.arcbees.website.client.resources.PageContactResources"/>
    <ui:with field="fonts" type="com.arcbees.website.client.resources.FontResources"/>

    <g:HTMLPanel styleName="{page.style.contact}">

        <h1 class="{fonts.icons.iconArcbees} {res.style.withLogo}">
            <span>Contact</span>
        </h1>

        <section class="{page.style.headerBg}">
            <g:SimplePanel ui:field="container"/>
        </section>

        <section class="{page.style.workWithUs} {res.style.stripe} {res.style.dark} {res.style.triangleBottom} {res.style.nextColored}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper} {res.style.focusBlock}">
                <div class="{res.grid.col} {res.grid.col_1_2} {res.grid.col_push_1_4} {res.grid.col_m_full} {res.grid.col_m_push_0}">

                    <h2>Work with us</h2>
                    <p>250-2299 boul. Versant nord<br/>Québec, Québec G1N 4G2
                    </p>
                    <p>
                        <a href="mailto:queenbee@arcbees.com">QUEENBEE@ARCBEES.COM</a>
                        <br/>
                        <strong>Toll-free:</strong>
                        1.877.635.1585
                    </p>
                        <a class="{res.style.btn}">Get directions</a>

                </div>
            </div>
        </section>

        <section
                class="{res.style.stripe} {res.style.colored} {res.style.triangleBottom} {res.style.nextLight} {res.style.centered}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <h2>Let's bee
                    <span>friends</span>
                </h2>
                <ul class="{page.style.social}">
                    <li>
                        <a href="#" data-icon="&#xe622;"></a>
                    </li>
                    <li>
                        <a href="#" data-icon="&#xe60d;"></a>
                    </li>
                    <li>
                        <a href="#" data-icon="&#xe611;"></a>
                    </li>
                    <li>
                        <a href="#" data-icon="&#xe623;"></a>
                    </li>
                    <li>
                        <a href="#" data-icon="&#xe60a;"></a>
                    </li>
                    <li>
                        <a href="#" data-icon="&#xe60c;"></a>
                    </li>
                </ul>
            </div>
        </section>

        <section class="{page.style.quebec} {res.style.stripe} {res.style.light} {res.style.centered}">
            <h3>We have fun in
                <span>beautiful quebec city</span>
            </h3>
            <div>
                une pelleter d'image
            </div>
        </section>

        <section class="{res.style.stripe} {res.style.light}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper} {res.style.btns} {res.style.centered}">
                <div class="{res.grid.col} {res.grid.col_full}">
                    <h3>Learn more about</h3>
                    <a class="{res.style.btn}">Expertise</a>
                    <a class="{res.style.btn}">Products</a>
                    <a class="{res.style.btn}">Services</a>
                </div>
            </div>
        </section>

    </g:HTMLPanel>
</ui:UiBinder>
