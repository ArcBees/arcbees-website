<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="en">
    <ui:with field="res" type="com.arcbees.hive.client.resource.Resources"/>
    <ui:with field="uxCategories" type="com.arcbees.hive.client.application.uxdesign.UxCategoryIds"/>
    <ui:style>
        .uxCarousel {
            position: relative;
            height: 120px;
        }

        .uxCarousel div {
            height: 120px;
            position: absolute;
            top: 0;
            left: 0;
        }

        .btCarousel {
            position: relative;
            margin: -30px auto 0 auto;
            height: 120px;
        }

        .btsCarousel {
            width: 732px;
            margin: 0 auto;
            position: relative;
            z-index: 20;
        }

        .btsCarousel a:first-child, .btsCarousel a:first-child:hover {
            margin-left: 0;
        }

        .btsCarousel a, .btsCarousel a:hover {
            text-align: center;
            line-height: 109px;
            display: block;
            margin-left: 6px;
            z-index: 20;
            float: left;
            cursor: pointer;
        }

        .btsCarousel a span, .btsCarousel a:hover span {
            width: 100px;
            color: #fff;
            font-size: 15px;
            line-height: 16px;
            display: inline-block;
            vertical-align: middle;
        }

        .visible {
            display: block;
        }

        .hidden {
            display: none;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{res.style.mainSectionContainer} {res.style.bulleBgMain} {res.style.cornerBottom}">
        <p class="{res.style.pHead}">
            <ui:msg description="Ux Design > introduction paragraph">ArcBees builds robust and scalable applications
                with the best programmers around. A great user experience is a key factor in the success of your web
                application. Luckily, ArcBees will keep listening and iterating over your needs, in order to create a
                delighful experience for your users.ï»¿
            </ui:msg>
        </p>
        <g:Image resource="{res.beeUx}" addStyleNames="{res.style.imgCenter}"/>
        <div id="btCarousel" class="{style.btCarousel}">
            <div class="{style.btsCarousel}">
                <g:Anchor ui:field="mobileWebsiteMobileApplicationAnchor" addStyleNames="{res.style.uxButtonOn}">
                    <span>
                        <ui:msg description="Ux Design > Mobile website and mobile application > Title">Mobile website
                            and mobile application
                        </ui:msg>
                    </span>
                </g:Anchor>
                <g:Anchor ui:field="informationDesignAnchor" addStyleNames="{res.style.uxButton}">
                    <span>
                        <ui:msg description="Ux Design > Information design > Title">Information design</ui:msg>
                    </span>
                </g:Anchor>
                <g:Anchor ui:field="informationArchitectureAnchor" addStyleNames="{res.style.uxButton}">
                    <span>
                        <ui:msg description="Ux Design > Information architecture > Title">Information architecture
                        </ui:msg>
                    </span>
                </g:Anchor>
                <g:Anchor ui:field="interactionDesignInterfaceAnchor" addStyleNames="{res.style.uxButton}">
                    <span>
                        <ui:msg description="Ux Design > Interaction design / interface > Title">Interaction design /
                            interface
                        </ui:msg>
                    </span>
                </g:Anchor>
                <g:Anchor ui:field="ergonimicDesignAnchor" addStyleNames="{res.style.uxButton}">
                    <span>
                        <ui:msg description="Ux Design > Ergonomic design > Title">Ergonomic design</ui:msg>
                    </span>
                </g:Anchor>
                <g:Anchor ui:field="performanceMeasuresAnchor" addStyleNames="{res.style.uxButton}">
                    <span>
                        <ui:msg description="Ux Design > Performance measures > Title">Performance measures</ui:msg>
                    </span>
                </g:Anchor>
            </div>
        </div>
        <div id="uxCarousel" class="{style.uxCarousel}">
            <div id="{uxCategories.mobileWebsiteAndApplication}" class="{style.visible}">
                <h3>
                    <ui:msg description="Ux Design > Mobile website and mobile application > Title">Mobile website and
                        mobile
                        application
                    </ui:msg>
                </h3>
                <p>
                    <ui:msg description="Ux Design > Mobile website and mobile application > Paragraph">ArcBees has
                        expertise in
                        design mobile of website such as iPhone, Android, BlackBerry and Windows.
                        We can
                        program, develop and design this mobile website in compatibility of social marketing like
                        facebook
                        and
                        others.
                        This approach is created to optimize the use and promote the development of your social
                        networks.
                    </ui:msg>
                </p>
            </div>
            <div id="{uxCategories.informationDesign}" class="{style.hidden}">
                <h3>
                    <ui:msg description="Ux Design > Information design > Title">Information design</ui:msg>
                </h3>
                <p>
                    <ui:msg description="Ux Design > Information design > Paragraph">ArcBees is able to do the thorough,
                        user-centered facilitating access to information. This study
                        facilitates
                        understanding of not just informations, but also the interface design which makes it more
                        intuitive
                        for
                        good
                        numbers of users, as they must be guided through the pages and content without the need to a
                        research
                        effort.
                    </ui:msg>
                </p>
            </div>

            <div id="{uxCategories.informationArchitecture}" class="{style.hidden}">
                <h3>
                    <ui:msg description="Ux Design > Information architecture > Title">Information architecture</ui:msg>
                </h3>

                <p>
                    <ui:msg description="Ux Design > Information architecture > Paragraph">The information architecture
                        is
                        an
                        organizing structure, navigation, terminology and search
                        functions to
                        build
                        and establish a system of content. The objective is to find a system for organizing information
                        that
                        is
                        relevant
                        to optimal research tasks for the user. The problems are not the same depending on the
                        objectives
                        and
                        scope
                        of
                        the application or website.
                    </ui:msg>

                </p>
            </div>
            <div id="{uxCategories.interactionDesignInterface}" class="{style.hidden}">
                <h3>
                    <ui:msg description="Ux Design > Interaction design / interface > Title">Interaction design /
                        interface
                    </ui:msg>
                </h3>
                <p>
                    <ui:msg description="Ux Design > Interaction design / interface > Paragraph">ArcBees offers an
                        interaction
                        design phase of observation and analysis to identify pathways relevant
                        for your
                        website or application software. So, your application reflects the needs of the user and your
                        target
                        audience.
                        In this way, the user is guided through by interface so intuitive.
                    </ui:msg>
                </p>
            </div>
            <div id="{uxCategories.ergonomicDesign}" class="{style.hidden}">
                <h3>
                    <ui:msg description="Ux Design > Ergonomic design > Title">Ergonomic design</ui:msg>
                </h3>
                <p>
                    <ui:msg description="Ux Design > Ergonomic design > Paragraph">ArcBees wonders about the intentions
                        and
                        navigation patterns of users. By having this creative
                        process, we
                        improve your conversion rate of your website and your income. We define a user profil, use
                        personas,
                        guide
                        the
                        client, improve the user experience, we ergonomically adapt the application to the mobile
                        format.
                    </ui:msg>
                </p>
            </div>
            <div id="{uxCategories.performanceMeasures}" class="{style.hidden}">
                <h3>
                    <ui:msg description="Ux Design > Performance measures > Title">Performance measures</ui:msg>
                </h3>
                <p>
                    <ui:msg description="Ux Design > Performance measures > Paragraph">Arcbees offers opportunities to
                        assess
                        your performance. Our methodology is based on iterative
                        processes of
                        creation: continuous improvement of your performance(which allow you to track transactions that
                        have affected,
                        validated,
                        issued
                        and stopped) and calculate their impact on your investments in the web.
                    </ui:msg>
                </p>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
