<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="en">
    <ui:with field="res" type="com.arcbees.hive.client.resource.Resources"/>
    <ui:with field="home" type="com.arcbees.hive.client.resource.home.HomeResources"/>
    <ui:with field='nameTokens' type='com.arcbees.hive.client.place.NameTokens'/>
    <ui:style>
        body .home {
            height: auto;
        }

        .home h2 {
            font-size: 22px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 15px;
        }

        .home p {
            font-size: 17px;
            line-height: 20px;
            margin-bottom: 35px;
        }

        .home .productsNav {
            height: 80px;
            overflow: hidden;
            position: relative;
        }

        .home #boutonsProducts {
            position: relative;
            bottom: 80px;
            left: 735px;
            padding-top: 15px;
        }

        .home #boutonsProducts a:first-child {
            margin-top: 0;
        }

        .home #boutonsProducts a {
            margin-top: 4px;
            display: block;
        }

        .home .productsNav p {
            margin-top: 20px;
            font-size: 17px;
            float: left;
            color: #939698;
            width: 500px;
            height: 20px;
        }

        .home .productsNav a {
            width: 375px;
            font-size: 13px;
            color: #939698;
            font-variant: small-caps;
            display: inline-block;
            position: relative;
            top: -20px;
            left: 180px;
        }

        .home .productsNav a:hover {
            color: #6e6e6e;
        }

        .home  .sliderProductsContainer {
            font-family: Verdana,Arial,sans-serif;
            position: relative;
            margin: 55px auto 0 auto;
            width: 750px;
            height: 80px;
            overflow: hidden;
        }

    </ui:style>
    <g:HTMLPanel addStyleNames="{res.style.mainSectionContainer} {res.style.bulleBgHome} {res.style.cornerBottom} {style.home}">
        <h2>
            <ui:msg description="Home > Title">Have a new web project? Need to redesign your architecture?</ui:msg>
        </h2>
        <p class="{res.style.pHead}">
            <ui:msg description="Home > Subtitle">With ArcBees, your company may spend more time doing what it does best
                while we provide you simple web
                solutions that meet your needs. We are specialists in GWTP, UX design and Cloud Computing
            </ui:msg>
        </p>
        <g:Image resource="{home.gwtHtml5Cloud}" addStyleNames="{res.style.imgCenter}"/>

        <div class="{style.sliderProductsContainer}">
            <div id="sliderProductsCarousel" class="{style.productsNav}">
                <div>
                    <g:Image resource="{home.sliderQuotesGauche}" addStyleNames="{res.style.imgLeft}"/>
                    <g:Image resource="{home.sliderProductGWTPlatform}" addStyleNames="{res.style.imgLeft}"/>
                    <p>
                        <ui:msg description="Home > Products > GWTP">The most popular MVP framework for GWT</ui:msg>
                    </p>
                    <g:Image resource="{home.sliderQuotesDroite}" addStyleNames="{res.style.imgRight}"/>
                    <a href="#{nameTokens.getProduct}">
                        <ui:msg description="Home > Products > Learn More">Click here to learn more about our
                            products...
                        </ui:msg>
                    </a>
                </div>
                <div>
                    <g:Image resource="{home.sliderQuotesGauche}" addStyleNames="{res.style.imgLeft}"/>
                    <g:Image resource="{home.sliderProductGAEStudio}" addStyleNames="{res.style.imgLeft}"/>
                    <p>
                        <ui:msg description="Home > Products > GAE Studio">Still a society's secret, GAE is coming
                            soon!
                        </ui:msg>
                    </p>
                    <g:Image resource="{home.sliderQuotesDroite}" addStyleNames="{res.style.imgRight}"/>
                    <a href="#{nameTokens.getProduct}">
                        <ui:msg description="Home > Products > Learn More">Click here to learn more about our
                            products...
                        </ui:msg>
                    </a>
                </div>
                <div>
                    <g:Image resource="{home.sliderQuotesGauche}" addStyleNames="{res.style.imgLeft}"/>
                    <g:Image resource="{home.sliderProductJukito}" addStyleNames="{res.style.imgLeft}"/>
                    <p>
                        <ui:msg description="Home > Products > Jukito">Jukito complements your testing infrastructure
                        </ui:msg>
                    </p>
                    <g:Image resource="{home.sliderQuotesDroite}" addStyleNames="{res.style.imgRight}"/>
                    <a href="#{nameTokens.getProduct}">
                        <ui:msg description="Home > Products > Learn More">Click here to learn more about our
                            products...
                        </ui:msg>
                    </a>
                </div>
            </div>
            <div id="boutonsProducts">
                <g:Anchor ui:field="btGWTP" addStyleNames="{home.style.sliderProductsOn}"/>
                <g:Anchor ui:field="btJukito" addStyleNames="{home.style.sliderProductsButton}"/>
                <g:Anchor ui:field="btGAE" addStyleNames="{home.style.sliderProductsButton}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
