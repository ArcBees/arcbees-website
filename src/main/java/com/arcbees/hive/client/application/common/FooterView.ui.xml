<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="en">

    <ui:with field='res' type='com.arcbees.hive.client.resource.Resources'/>
    <ui:with field="nameTokens" type="com.arcbees.hive.client.place.NameTokens"/>

    <ui:style>
        .root {
            width: 796px;
            background-color: #c5932c;
            margin: 10px auto 10px auto;
            padding: 30px 50px 15px 50px;
            position: relative;
        }

        .footer {
            background-color: #c5932c;
            font-size: 13px;
            font-family: "Verdana";
            text-align: right;
            color: #4b3c30;
            margin-top: 15px;
        }

        .footer a {
            color: #ffffff;
            text-decoration: none;
        }

        .footer a:HOVER {
            color: #4b3c30;
        }

        .copryright {
            text-align: center;
            font-size: 10px;
        }


    </ui:style>
    <g:HTMLPanel addStyleNames="{style.root} {res.style.cornerTopBottom}">
        <g:HTMLPanel>
            <p>ArcBees </p>
            <a href="#{nameTokens.getService}">Services</a>
            <a href="#{nameTokens.getProduct}">
                <ui:msg description="Main navbar - Products">Products</ui:msg>
            </a>
            <a href="#{nameTokens.getJob}">
                <ui:msg description="Main navbar - Job Opportunities">Job
                    Opportunities
                </ui:msg>
            </a>
            <a href="#{nameTokens.getAbout}">
                <ui:msg description="Main navbar - About Us">About Us</ui:msg>
            </a>
            <a href="#{nameTokens.getContact}">
                <ui:msg description="Main navbar - Contact Us">Contact Us</ui:msg>
            </a>
        </g:HTMLPanel>
        <g:HTMLPanel>
            <p>Projects</p>
            <p>
                <a href="http://code.google.com/p/arcbees-hive/">Hive</a>
                <br/>
                <a href="http://code.google.com/p/gwt-platform/">Gwt-Platform</a>
                <br/>
                <a href="http://code.google.com/p/gwt-platform/">Jukito</a>
            </p>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="recentNews">
            <p>Recent News</p>
        </g:HTMLPanel>
        <g:HTMLPanel>
            <p>Contact Us</p>
        </g:HTMLPanel>
        <g:HTMLPanel>
            <p>Follow Us</p>
            <p>
                <a href="http://www.linkedin.com/company/arcbees?trk=fc_badge" target="_blank">LinkedIn</a>
                <br/>
                <a href="http://twitter.com/arcbees" target="_blank">Twitter</a>
                <br/>
                <a href="http://www.facebook.com/pages/ArcBees/201744089861261" target="_blank">Facebook</a>
                <br/>
                <a href="http://arcbees.wordpress.com/" target="_blank">Blog</a>
            </p>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.copryright}">
            Copyright &copy; 2011 ArcBees
            All rights reserved.
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
