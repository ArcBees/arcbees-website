<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="en">
    <ui:with field="res" type="com.arcbees.hive.client.resource.Resources"/>
    <ui:with field="home" type="com.arcbees.hive.client.resource.home.HomeResources"/>
    <ui:style>
        body .home {
            height: auto;
        }

        .home h2 {
            color: #7e8890;
            font-size: 22px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 15px;
        }

        .home p {
            color: #8b9296;
            font-size: 17px;
            line-height: 20px;
            margin-bottom: 35px;
        }

        .home .products {
            margin: 55px auto 0 auto;
            width: 725px;
        }

        .home .boutonsProducts {
            float: right;
        }

        .home .productsNav {
            width: inherit;
            height: 80px;
            overflow: hidden;
            position: relative;
        }

        .home .boutonsProducts a:first-child {
            margin-left: 0;
        }

        .home .boutonsProducts a {
            margin-left: 9px;
            float: left;
        }

        .home .productsNav p {
            margin-top: 20px;
            font-size: 19px;
            float: left;
            color: #939698;
        }

        .home .productsNav a {
            width: 325px;
            font-size: 13px;
            color: #939698;
            font-variant: small-caps;
            display: inline-block;
            position: relative;
            bottom: 20px;
            left: 180px;
        }

        .home .productsNav a:hover {
            color: #6e6e6e;
        }

    </ui:style>
    <g:HTMLPanel addStyleNames="{res.style.mainSection} {res.style.bulleBgHome} {res.style.cornerBottom} {style.home}">
        <h2>
            <ui:msg description="Home > Title">Have a new web project? Need to redesign your architecture?</ui:msg>
        </h2>
        <p>
            <ui:msg description="Home > Subtitle">With ArcBees, your company may spend more time doing what it does best
                while we provide you simple web
                solutions that meet your needs. We are specialists in GWTP, UX design and Cloud Computing
            </ui:msg>
        </p>
        <g:Image resource="{home.gwtHtml5Cloud}" addStyleNames="{res.style.imgCenter}"/>

        <g:HTMLPanel addStyleNames="{style.products}">
            <g:HTMLPanel addStyleNames="{style.productsNav}">
                <g:HTMLPanel>
                    <g:Image resource="{home.sliderQuotesGauche}" addStyleNames="{res.style.imgLeft}"/>
                    <g:Image resource="{home.sliderProductGWTPlatform}" addStyleNames="{res.style.imgLeft}"/>
                    <p class="product">The most popular MVP framework for GWT</p>
                    <g:Image resource="{home.sliderQuotesDroite}" addStyleNames="{res.style.imgRight}"/>
                    <a href="#" class="product">Click here to learn more about our products...</a>
                </g:HTMLPanel>
                <g:HTMLPanel>
                    <g:Image resource="{home.sliderQuotesGauche}" addStyleNames="{res.style.imgLeft}"/>
                    <g:Image resource="{home.sliderProductJukito}" addStyleNames="{res.style.imgLeft}"/>
                    <p class="product">Jukito complements your testing infrastructure</p>
                    <g:Image resource="{home.sliderQuotesDroite}" addStyleNames="{res.style.imgRight}"/>
                    <a href="#" class="product">Click here to learn more about our products...</a>
                </g:HTMLPanel>
                <g:HTMLPanel>
                    <g:Image resource="{home.sliderQuotesGauche}" addStyleNames="{res.style.imgLeft}"/>
                    <g:Image resource="{home.sliderProductBeeHive}" addStyleNames="{res.style.imgLeft}"/>
                    <p class="product">BeeHive, an open source CMS, facilitate GWT usage</p>
                    <g:Image resource="{home.sliderQuotesDroite}" addStyleNames="{res.style.imgRight}"/>
                    <a href="#" class="product">Click here to learn more about our products...</a>
                </g:HTMLPanel>
                <g:HTMLPanel>
                    <g:Image resource="{home.sliderQuotesGauche}" addStyleNames="{res.style.imgLeft}"/>
                    <g:Image resource="{home.sliderProductGAEStudio}" addStyleNames="{res.style.imgLeft}"/>
                    <p class="product">Still a society's secret, GAE is coming soon!</p>
                    <g:Image resource="{home.sliderQuotesDroite}" addStyleNames="{res.style.imgRight}"/>
                    <a href="#" class="product">Click here to learn more about our products...</a>
                </g:HTMLPanel>
            </g:HTMLPanel>
            <g:HTMLPanel addStyleNames="{style.boutonsProducts}">
                <a href="#" id="btProduct1">
                    <g:PushButton>
                        <g:upFace image="{home.sliderProductsBt}"/>
                        <g:upHoveringFace image="{home.sliderProductsBtRl}"/>
                        <g:downHoveringFace image="{home.sliderProductsBtRl}"/>
                    </g:PushButton>
                </a>
                <a href="#" id="btProduct2">
                    <g:PushButton>
                        <g:upFace image="{home.sliderProductsBt}"/>
                        <g:upHoveringFace image="{home.sliderProductsBtRl}"/>
                        <g:downHoveringFace image="{home.sliderProductsBtRl}"/>
                    </g:PushButton>
                </a>
                <a href="#" id="btProduct3">
                    <g:PushButton>
                        <g:upFace image="{home.sliderProductsBt}"/>
                        <g:upHoveringFace image="{home.sliderProductsBtRl}"/>
                        <g:downHoveringFace image="{home.sliderProductsBtRl}"/>
                    </g:PushButton>
                </a>
                <a href="#" id="btProduct4">
                    <g:PushButton>
                        <g:upFace image="{home.sliderProductsBt}"/>
                        <g:upHoveringFace image="{home.sliderProductsBtRl}"/>
                        <g:downHoveringFace image="{home.sliderProductsBtRl}"/>
                    </g:PushButton>
                </a>
            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder> 
