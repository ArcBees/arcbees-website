<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="en">
    <ui:with field='res' type='com.arcbees.hive.client.resource.Resources'/>
    <ui:with field='nameTokens' type='com.arcbees.hive.client.place.NameTokens'/>
    <ui:style>
        .menuContainer {
            width: inherit;
            height: 30px;
            font-family: "Verdana";
            font-size: 17px;
            line-height: 30px;
            margin-top: 15px;
        }

        .menuContainer div a {
            margin-top: 5px;
            margin-left: 15px;
            margin-right: 15px;
            color: #9f9f9f;
        }

        .menuContainer div a:hover {
            color: #5f5f5f;
        }

        .navPrincipale {
            float: right;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.menuContainer} {res.style.cornerTop} {res.style.navBarBgSprite}">
        <div class="{style.navPrincipale}">
            <a href="#{nameTokens.getService}">Services</a>
            <a href="#{nameTokens.getUxdesign}">UX Design</a>
            <a href="#{nameTokens.getProduct}">
                <ui:msg description="Main navbar - Products">Products</ui:msg>
            </a>
            <a href="#{nameTokens.getJob}">
                <ui:msg description="Main navbar - Job Opportunities">Job
                    Opportunities
                </ui:msg>
            </a>
            <a href="#{nameTokens.getContact}">
                <ui:msg description="Main navbar - Contact Us">Contact Us</ui:msg>
            </a>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
