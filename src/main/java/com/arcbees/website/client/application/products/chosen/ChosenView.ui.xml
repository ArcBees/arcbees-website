<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
        ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
        ui:generateLocales="default">

    <ui:with field="res" type="com.arcbees.website.client.resources.AppResources"/>
    <ui:with field="page" type="com.arcbees.website.client.resources.PageProductResources"/>
    <ui:with field="fonts" type="com.arcbees.website.client.resources.FontResources"/>

    <ui:import field="com.arcbees.website.client.NameTokens.*"/>

    <g:HTMLPanel styleName="{page.style.products} {page.style.chosen}">

        <nav class="{page.style.breadcrumb}">
            <span class="{fonts.icons.iconArcbees} {page.style.logo}"></span>
            <ul>
                <li>PRODUCT</li>
                <li>CHOSEN</li>
            </ul>
        </nav>

        <section class="{res.style.stripe}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <div class="{res.grid.col} {res.grid.col_full}">
                    <h1>chosen
                        <a href="#" class="{res.style.anchor}">#</a>
                    </h1>
                    <h2 class="{page.style.presentation}">
                        <ui:msg description="Making select boxes">Making select boxes
                            <span>more user-friendly,</span>
                            <span>the GWT way</span>
                        </ui:msg>
                    </h2>
                    <div class="{page.style.socialTop}">
                        <ul class="{page.style.social}">
                            <li>
                                <a href="#" class="{fonts.icons.iconGPlus}">
                                    <span class="{res.style.hidden}">Google plus</span>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="{fonts.icons.iconGitHub}">
                                    <span class="{res.style.hidden}">Github</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <div class="{res.grid.col} {res.grid.col_push_1_2} {res.grid.col_m_full} {res.grid.col_m_push_0}">
                    <p>
                        <strong>
                            <ui:msg description="GwtChosen is a port...">GwtChosen is a port of Chosen, made for GWT. It
                                is not just a wrapper, but a complete rewrite using GWT standards.
                            </ui:msg>
                        </strong>
                    </p>
                    <p>
                        <ui:msg description="GwtChosen is a port... - Paragraphe -">GwtChosen lets you jazz up boring
                            select boxes with tons of useful features, while leveraging GWT optimizations and type
                            safety.
                        </ui:msg>
                    </p>
                </div>
            </div>
            <div class="{page.style.btns} {res.grid.row} {res.style.clearfix} {res.style.wrapper} {res.style.centered}">
                <div class="{res.grid.col} {res.grid.col_12}">
                    <a href="#{SUPPORT}" class="{res.style.btn}">
                        <ui:msg description="Support">Support</ui:msg>
                    </a>
                    <a href="#" class="{res.style.btn}">
                        <i class="{fonts.icons.iconArrowOutside}"></i>
                        <ui:msg description="- BTN - Developers Platform">Developer's Platform</ui:msg>
                    </a>
                </div>
            </div>
        </section>

        <section class="{res.style.stripe} {page.style.stripeDetails} {res.style.centered}">
            <h2>
                <ui:msg description="Features">Features</ui:msg>
            </h2>
        </section>

        <section class="{res.style.stripe} {page.style.stripeDetails}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <div class="{res.grid.col} {res.grid.col_1_3} {res.grid.col_m_full}">
                    <h3>
                        <ui:msg description="Fully Customizable">Fully Customizable</ui:msg>
                    </h3>
                </div>
                <div class="{res.grid.col} {res.grid.col_2_3} {res.grid.col_m_full}">
                    <p>
                        <ui:msg description="Fully Customizable - Paragraph -">GwtChosen gives you a host of options for
                            customizing select boxes, from deep cosmetic changes to grouping selected items to default
                            text support.
                        </ui:msg>
                    </p>
                </div>
            </div>
        </section>

        <section class="{res.style.stripe} {page.style.stripeDetails} {res.style.medium1}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <div class="{res.grid.col} {res.grid.col_1_3} {res.grid.col_m_full}">
                    <h3>
                        <ui:msg description="Search Support">Search Support</ui:msg>
                    </h3>
                </div>
                <div class="{res.grid.col} {res.grid.col_2_3} {res.grid.col_m_full}">
                    <p>
                        <ui:msg description="Search Support - Paragraph -">Using GwtChosen, you can dynamically update
                            items displayed in your select boxes with data fetched from your server, as your users type.
                        </ui:msg>
                    </p>
                </div>
            </div>
        </section>

        <section class="{res.style.stripe} {page.style.stripeDetails}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <div class="{res.grid.col} {res.grid.col_1_3} {res.grid.col_m_full}">
                    <h3>
                        <ui:msg description="Use It Your Way">Use It Your Way</ui:msg>
                    </h3>
                </div>
                <div class="{res.grid.col} {res.grid.col_2_3} {res.grid.col_m_full}">
                    <p>
                        <ui:msg description="Use It Your Way - Paragraph -">If you prefer using GQuery plugins,
                            GwtChosen can be used that way. If you like UiBinder and Widgets better, GwtChosen has you
                            covered too.
                        </ui:msg>
                    </p>
                </div>
            </div>
        </section>

        <section class="{res.style.stripe} {page.style.stripeDetails} {res.style.medium1}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <div class="{res.grid.col} {res.grid.col_1_3} {res.grid.col_m_full}">
                    <h3>
                        <ui:msg description="Bind To Events">Bind To Events</ui:msg>
                    </h3>
                </div>
                <div class="{res.grid.col} {res.grid.col_2_3} {res.grid.col_m_full}">
                    <p>
                        <ui:msg description="Bind To Events - Paragraph -">You can hook into various lifecycle events of
                            your GwtChosen listboxes to add custom behaviors.
                        </ui:msg>
                    </p>
                </div>
            </div>
        </section>

        <section class="{res.style.stripe} {page.style.stripeDetails}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <div class="{res.grid.col} {res.grid.col_1_3} {res.grid.col_m_full}">
                    <h3>
                        <ui:msg description="Easy Setup">Easy Setup</ui:msg>
                    </h3>
                </div>
                <div class="{res.grid.col} {res.grid.col_2_3} {res.grid.col_m_full}">
                    <p>
                        <ui:msg description="Easy Setup - Paragraph -">GwtChosen is already available in Maven
                            repositories, and as a standalone jar file. All you need to do is add the GwtChosen GWT
                            module, and youâ€™re ready to go.
                        </ui:msg>
                    </p>
                </div>
            </div>
        </section>

        <section class="{res.style.stripe} {res.style.light} {res.style.centered} {page.style.moreOn}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <div class="{res.grid.col} {res.grid.col_full}">
                    <h3>
                        <ui:msg description="more on">more on
                        </ui:msg>
                    </h3>
                    <a href="#" class="{res.style.btn}">
                        <i class="{fonts.icons.iconArrowOutside}"></i>
                        <ui:msg description="- BTN - Developers Platform">Developer's Platform</ui:msg>
                    </a>
                </div>
            </div>
        </section>

        <section class="{res.style.stripe} {page.style.colored} {res.style.centered}">
            <h3>
                <ui:msg description="Share">SHARE</ui:msg>
            </h3>
            <ul class="{page.style.social}">
                <li>
                    <a href="#" class="{fonts.icons.iconFb}">
                        <span class="{res.style.hidden}">Facebook</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="{fonts.icons.iconTwitter}">
                        <span class="{res.style.hidden}">Twitter</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="{fonts.icons.iconGPlus}">
                        <span class="{res.style.hidden}">Google</span>
                    </a>
                </li>
            </ul>
        </section>

    </g:HTMLPanel>
</ui:UiBinder>
