<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:slider="urn:import:com.arcbees.website.client.application.slider"
        xmlns:seo="urn:import:com.arcbees.seo.widget"
        ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
        ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
        ui:generateLocales="default">

    <ui:with field="nameTokens" type="com.arcbees.website.client.NameTokensConstants"/>
    <ui:with field="res" type="com.arcbees.website.client.resources.AppResources"/>
    <ui:with field="page" type="com.arcbees.website.client.resources.PageContactResources"/>
    <ui:with field="fonts" type="com.arcbees.website.client.resources.FontResources"/>

    <g:HTMLPanel styleName="{page.style.contact}">

        <seo:SeoWidget>
            <seo:Title>
                <ui:msg description="SEO - Contact - title">Contact - Arcbees</ui:msg>
            </seo:Title>
            <seo:Description>
                <ui:msg description="SEO - Contact - description">
                    250-2299 boul. Versant nord - Québec, Québec - G1N 4G2 | 1.877.635.1585
                </ui:msg>
            </seo:Description>
        </seo:SeoWidget>

        <h1 class="{res.style.breadcrumb} {res.style.withLogo}">
            Contact
        </h1>

        <section class="{page.style.headerBg}">
            <g:SimplePanel ui:field="container"/>
        </section>

        <section
                class="{page.style.workWithUs} {res.style.stripe} {res.style.dark} {res.style.triangleBottom} {res.style.nextColored}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper} {res.style.focusBlock}">
                <div class="{res.grid.col} {res.grid.col_1_2} {res.grid.col_push_1_4} {res.grid.col_m_full} {res.grid.col_m_push_0}">
                    <h2>
                        <ui:msg description="Contact - Work with us">We are here to help you</ui:msg>
                    </h2>
                    <p>
                        <ui:msg description="Contact - address">250-2299 Blvd. Versant nord<br/>Quebec,
                            Quebec G1N 4G2
                        </ui:msg>
                    </p>
                    <p>
                        <a href="mailto:queenbee@arcbees.com">queenbee@arcbees.com</a>
                        <br/>
                        <strong>
                            <ui:msg description="Contact - Toll-free:">Toll-free number:</ui:msg>
                        </strong>
                        1.877.635.1585
                    </p>
                    <a href="https://www.google.ca/maps/dir/''/arcbees/@46.7918145,-71.3551763,12z/data=!3m1!4b1!4m8!4m7!1m0!1m5!1m1!1s0x4cb8971fd358c99b:0xd5dc164e651a11d7!2m2!1d-71.28651!2d46.791835"
                       title="get directions" target="_blank" class="{res.style.btn}">
                        <ui:attribute ui:name='title' ui:description='get directions'/>
                        <ui:msg description="Get directions">Get directions</ui:msg>
                    </a>
                </div>
            </div>
        </section>

        <section
                class="{res.style.stripe} {res.style.colored} {res.style.triangleBottom} {res.style.nextLight} {res.style.centered}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <h2>
                    <ui:msg description="Contact - Let's bee friends">Let's bee
                        <span>friends</span>
                    </ui:msg>
                </h2>
                <ul class="{page.style.social}">
                    <li>
                        <a href="https://twitter.com/arcbees" title="Arcbees's twitter" target="_blank" data-icon="&#xe622;">
                        </a>
                    </li>
                    <li>
                        <a href="https://plus.google.com/+Arcbees/posts" title="Arcbees's google plus" target="_blank"
                           data-icon="&#xe60d;">
                        </a>
                    </li>
                    <li>
                        <a href="https://www.linkedin.com/company/arcbees" title="Arcbees's linked in" target="_blank"
                           data-icon="&#xe611;">
                        </a>
                    </li>
                    <li>
                        <a href="https://arcbees.wordpress.com/" title="Arcbees's wordpress" target="_blank" data-icon="&#xe623;">
                        </a>
                    </li>
                    <li>
                        <a href="https://www.facebook.com/arcbees" title="Arcbees's facebook" target="_blank"
                           data-icon="&#xe60a;">
                        </a>
                    </li>
                    <li>
                        <a href="https://github.com/ArcBees" title="Arcbees's github" target="_blank" data-icon="&#xe60c;">
                        </a>
                    </li>
                </ul>
            </div>
        </section>

        <section class="{page.style.quebec} {res.style.stripe} {res.style.light} {res.style.centered} {res.grid.col_m_hide}">
            <h3>
                <ui:msg description="Contact - We have fun in beautiful quebec city">We have fun in
                    <span>beautiful quebec city</span>
                </ui:msg>
            </h3>
            <slider:Slider addStyleNames="{page.style.contactSlider}">
                <slider:content>
                    <g:HTMLPanel>
                        <div>
                            <g:Image resource="{page.contact1}"/>
                            <g:Image resource="{page.contact2}"/>
                            <g:Image resource="{page.contact3}"/>
                        </div>

                        <div>
                            <g:Image resource="{page.contact4}"/>
                            <g:Image resource="{page.contact5}"/>
                            <g:Image resource="{page.contact6}"/>
                        </div>

                        <div>
                            <g:Image resource="{page.contact7}"/>
                            <g:Image resource="{page.contact8}"/>
                            <g:Image resource="{page.contact9}"/>
                        </div>

                        <div>
                            <g:Image resource="{page.contact10}"/>
                            <g:Image resource="{page.contact11}"/>
                            <g:Image resource="{page.contact12}"/>
                        </div>

                        <div>
                            <g:Image resource="{page.contact13}"/>
                            <g:Image resource="{page.contact14}"/>
                            <g:Image resource="{page.contact15}"/>
                        </div>
                    </g:HTMLPanel>
                </slider:content>
            </slider:Slider>
        </section>

        <section class="{res.style.stripe} {res.style.light}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper} {res.style.btns} {res.style.centered}">
                <div class="{res.grid.col} {res.grid.col_full}">
                    <h3>
                        <ui:msg description="Contact - Learn more about">Learn more about</ui:msg>
                    </h3>
                    <a href="#{nameTokens.EXPERTISE}" title="Expertise" class="{res.style.btn}">
                        <ui:attribute ui:name='title' ui:description='Expertise'/>
                        Expertise
                    </a>
                    <a href="#{nameTokens.PRODUCTS}" title="Products" class="{res.style.btn}">
                        <ui:attribute ui:name='title' ui:description='Products'/>
                        <ui:msg description="- BTN - Products">Products</ui:msg>
                    </a>
                    <a href="#{nameTokens.SERVICES}" title="Services" class="{res.style.btn}">
                        <ui:attribute ui:name='title' ui:description='Services'/>
                        Services
                    </a>
                </div>
            </div>
        </section>

    </g:HTMLPanel>
</ui:UiBinder>
