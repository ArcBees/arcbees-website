<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:seo="urn:import:com.arcbees.seo.widget"
        ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
        ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
        ui:generateLocales="default">

    <ui:with field="nameTokens" type="com.arcbees.website.client.NameTokensConstants"/>
    <ui:with field="res" type="com.arcbees.website.client.resources.AppResources"/>
    <ui:with field="page" type="com.arcbees.website.client.resources.PageProductResources"/>
    <ui:with field="fonts" type="com.arcbees.website.client.resources.FontResources"/>
    <ui:with field="slider" type="com.arcbees.website.client.resources.SliderResources"/>

    <g:HTMLPanel styleName="{page.style.products} {page.style.gwtp}">

        <seo:SeoWidget>
            <seo:Title>
                <ui:msg description="SEO - Products - GWTP - title">GWTP - Products - Arcbees</ui:msg>
            </seo:Title>
            <seo:Description>
                <ui:msg description="SEO - Products - GWTP - description">
                    The best Model-View-Presenter framework for GWT.
                </ui:msg>
            </seo:Description>
            <seo:Og>
                <seo:OgImage height="630" width="1200">http://www.arcbees.com/img/facebook-gwtp.png</seo:OgImage>
            </seo:Og>
        </seo:SeoWidget>

        <nav class="{res.style.breadcrumb} {res.style.withLogo}">
            <ul>
                <li><ui:msg description="product">PRODUCT</ui:msg></li>
                <li>GWTP</li>
            </ul>
        </nav>

        <section class="{res.style.stripe}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <div class="{res.grid.col} {res.grid.col_10} {res.grid.col_m_full}">
                    <h1>gwt-platform
                        <a href="https://github.com/ArcBees/GWTP" target="_blank" class="{res.style.anchor}">#</a>
                    </h1>
                    <h2 class="{page.style.presentation}">
                        <ui:msg description="The best Model-View-Presenter framework for GWT">
                            The best Model-View-Presenter framework for GWT
                        </ui:msg>
                    </h2>
                    <div class="{page.style.socialTop}">
                        <ul class="{page.style.social}">
                            <li>
                                <a href="https://plus.google.com/u/0/communities/113139554133824081251
" target="_blank" class="{fonts.icons.iconGPlus}">
                                    <span class="{res.style.hidden}">Google plus</span>
                                </a>
                            </li>
                            <li>
                                <a href="https://github.com/ArcBees/GWTP" target="_blank" class="{fonts.icons.iconGitHub}">
                                    <span class="{res.style.hidden}">Github</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="{res.grid.col} {res.grid.col_push_1_2} {res.grid.col_m_full} {res.grid.col_m_push_0}">
                    <p>
                        <strong>
                            <ui:msg description="GWT-Platform (GWTP) is your companion for building large web applications based on Google Web Toolkit (GWT).">
                                GWT-Platform (GWTP) is your companion for building large web applications based on
                                Google Web Toolkit (GWT).
                            </ui:msg>
                        </strong>
                    </p>
                    <p>
                        <ui:msg description="Used by thousands of businesses around the world, GWTP will take your application to the next level!">
                            Used by thousands of businesses around the world, GWTP will take your application to the
                            next level!
                        </ui:msg>
                    </p>
                    <p>
                        <ui:msg description="Combining powerful features, GWTP is an out-of-the-box solution that supports all the requirements of modern development. It handles the tedious work so that you can focus on developing the core features of your web application, quickly and easily.">
                            Combining powerful features, GWTP is an out-of-the-box solution that supports all the
                            requirements of modern development. It handles the tedious work so that you can focus on
                            developing the core features of your web application, quickly
                            and easily.
                        </ui:msg>
                    </p>
                </div>
            </div>
            <div class="{page.style.btns} {res.grid.row} {res.style.clearfix} {res.style.wrapper} {res.style.centered}">
                <div class="{res.grid.col} {res.grid.col_12}">
                    <a href="#{nameTokens.SUPPORT}" class="{res.style.btn}">
                        <ui:msg description="Support">Support</ui:msg>
                    </a>
                    <a href="https://github.com/ArcBees/GWTP" target="_blank" class="{res.style.btn}">
                        <i class="{fonts.icons.iconArrowOutside}"></i>
                        <ui:msg description="- BTN - Developers Platform">Developer's Platform</ui:msg>
                    </a>
                </div>
            </div>
        </section>

        <section class="{res.style.stripe} {page.style.stripeDetails} {res.style.centered}">
            <h2>
                <ui:msg description="Features">Features</ui:msg>
            </h2>
        </section>

        <section class="{res.style.stripe} {page.style.stripeDetails}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <div class="{res.grid.col} {res.grid.col_1_3} {res.grid.col_m_full}">
                    <h3>
                        <ui:msg description="Easy to Use Framework">Easy to Use Framework</ui:msg>
                    </h3>
                </div>
                <div class="{res.grid.col} {res.grid.col_2_3} {res.grid.col_m_full}">
                    <p>
                        <ui:msg description="Easy to Use Framework - Paragraph -">Web applications need a solid
                            architecture to build upon as they grow. GWTP’s Model-View-Presenter (MVP) framework helps
                            you organize your code for scalability right from the start, cleanly separating the
                            different application layers.
                        </ui:msg>
                    </p>
                </div>
            </div>
        </section>

        <section class="{res.style.stripe} {page.style.stripeDetails} {res.style.medium1}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <div class="{res.grid.col} {res.grid.col_1_3} {res.grid.col_m_full}">
                    <h3>
                        <ui:msg description="Boilerplate-Free">Boilerplate-Free</ui:msg>
                    </h3>
                </div>
                <div class="{res.grid.col} {res.grid.col_2_3} {res.grid.col_m_full}">
                    <p>
                        <ui:msg description="Boilerplate-Free - Paragraph -">GWTP harnesses the power of GWT code
                            generation to help you reduce the amount of repetitive code you need to write when building
                            scalable applications. This frees you to focus on what matters most for your application.
                        </ui:msg>
                    </p>
                </div>
            </div>
        </section>

        <section class="{res.style.stripe} {page.style.stripeDetails}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <div class="{res.grid.col} {res.grid.col_1_3} {res.grid.col_m_full}">
                    <h3>
                        <ui:msg description="Flexibility">Flexibility</ui:msg>
                    </h3>
                </div>
                <div class="{res.grid.col} {res.grid.col_2_3} {res.grid.col_m_full}">
                    <p>
                        <ui:msg description="Flexibility - Paragraph -">GWTP was engineered with flexibility in mind.
                            Leveraging the full power of dependency injection, GWTP makes web apps more modular. By
                            taking advantage of Google Guice and Gin, GWTP ensures you have the flexibility to use all
                            the other dependencies your application needs.
                        </ui:msg>
                    </p>
                </div>
            </div>
        </section>

        <section class="{res.style.stripe} {page.style.stripeDetails} {res.style.medium1}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <div class="{res.grid.col} {res.grid.col_1_3} {res.grid.col_m_full}">
                    <h3>
                        <ui:msg description="Client/Server Communication">Client/Server Communication</ui:msg>
                    </h3>
                </div>
                <div class="{res.grid.col} {res.grid.col_2_3} {res.grid.col_m_full}">
                    <p>
                        <ui:msg description="Client/Server Communication - Paragraph -">Client/Server communication is
                            made easy using GWTP's communication libraries. The libraries provided by GWTP helps you
                            write the communication layer of your application using well-known mechanisms.
                        </ui:msg>
                    </p>
                </div>
            </div>
        </section>

        <section class="{res.style.stripe} {page.style.stripeDetails}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <div class="{res.grid.col} {res.grid.col_1_3} {res.grid.col_m_full}">
                    <h3>
                        <ui:msg description="Fast">Fast</ui:msg>
                    </h3>
                </div>
                <div class="{res.grid.col} {res.grid.col_2_3} {res.grid.col_m_full}">
                    <p>
                        <ui:msg description="Fast - Paragraph -">Big web applications can take long to load.
                            Thankfully, GWTP comes with integrated and effortless ways to cut your application's startup
                            time. Using a technique known as code-splitting, you’ll never lose a user because your
                            application is slow.
                        </ui:msg>
                    </p>
                </div>
            </div>
        </section>

        <section class="{res.style.stripe} {page.style.stripeDetails} {res.style.medium1}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <div class="{res.grid.col} {res.grid.col_1_3} {res.grid.col_m_full}">
                    <h3>
                        <ui:msg description="Maintenance and Evolution">Maintenance
                            <span>and Evolution</span>
                        </ui:msg>
                    </h3>
                </div>
                <div class="{res.grid.col} {res.grid.col_2_3} {res.grid.col_m_full}">
                    <p>
                        <ui:msg description="Maintenance and Evolution - Paragraph -">With GWTP, the maintenance of your
                            application couldn’t be easier. By letting GWTP provide the framework, you reduce your
                            maintenance workload. The strong framework also makes your app more evolvable and safe to
                            change.
                        </ui:msg>
                    </p>
                </div>
            </div>
        </section>

        <section class="{res.style.stripe} {res.style.light} {res.style.centered} {page.style.moreOn}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <div class="{res.grid.col} {res.grid.col_full}">
                    <h3>
                        <ui:msg description="more on">more on</ui:msg>
                    </h3>
                    <a href="https://github.com/ArcBees/GWTP" target="_blank" class="{res.style.btn}">
                        <i class="{fonts.icons.iconArrowOutside}"></i>
                        <ui:msg description="- BTN - Developers Platform">Developer's Platform</ui:msg>
                    </a>
                </div>
            </div>
        </section>

    </g:HTMLPanel>
</ui:UiBinder>
