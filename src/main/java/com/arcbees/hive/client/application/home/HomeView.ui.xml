<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="com.arcbees.hive.client.Resources"/>

    <ui:style>
        .movableSection {
            margin-left: 34px;
            margin-right: 34px;
        }

        .panel {
            position: absolute;
            width: 3552px;
        }

        .panel1 {
            position: absolute;
            width: 888px;
        }

        .panel2 {
            position: absolute;
            left: 888px;
            width: 888px;
        }

        .panel3 {
            position: absolute;
            left: 1776px;
            width: 888px;
        }

        .panel4 {
            position: absolute;
            left: 2664px;
            width: 888px;
        }

        .marginBottom {
            margin-bottom: 20px;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:HTMLPanel ui:field="topPanel"/>

        <div class="{res.style.blogBackground} {style.marginBottom}">
            <div class="{res.style.blogLeft}"/>
            <div class="{res.style.blogRight}"/>
            <div class="{res.style.blogDown}"/>

            <g:AbsolutePanel styleName="{style.movableSection}"
                             ui:field="resizablePanel" width="888px" height="500px">
                <g:HTMLPanel styleName="{style.panel}" ui:field="bottomPanel">
                    <g:SimplePanel styleName="{style.panel1}" ui:field="panel1"/>
                    <g:SimplePanel styleName="{style.panel2}" ui:field="panel2"/>
                    <g:SimplePanel styleName="{style.panel3}" ui:field="panel3"/>
                    <g:SimplePanel styleName="{style.panel4}" ui:field="panel4"/>
                </g:HTMLPanel>
            </g:AbsolutePanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 
