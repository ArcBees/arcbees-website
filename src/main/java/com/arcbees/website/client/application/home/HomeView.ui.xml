        <section class="{res.style.stripe} {res.style.header} {page.style.header} {res.style.colored}">
                <div class="{page.style.txtBanner}">
                    <p>
                        <strong>we<span class="{page.style.txtAre} {animations.style.animation}">are</span><span class="{page.style.txtBuild} {animations.style.animation}">build</span>
                        </strong>
                        <span class="{page.style.txtArch} {animations.style.animation}">
                            arc<span class="{page.style.txtArchitects} {animations.style.animation}">hitect</span><span class="{page.style.txtBees} {animations.style.animation}">bees</span>
                        </span>
                        <span class="{page.style.txtWeb} {animations.style.animation}">web applications</span>
                    </p>
                </div>
                <div class="{res.grid.row} {res.style.clearfix} {page.style.btns} {res.style.centered}">
                    <div class="{res.grid.col} {res.grid.col_full}">
                        <a href="#{EXPERTISE}" class="{res.style.btn}">Expertise</a>
                        <a href="#{PRODUCTS}" class="{res.style.btn}">Products</a>
                        <a href="#{SERVICES}" class="{res.style.btn}">Services</a>
                    </div>
                </div>
        </section>

        <section class="{res.style.stripe} {res.style.dark} {res.style.triangleBottom} {res.style.nextLight}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper} {res.style.focusBlock}">
                <div class="{res.grid.col} {res.grid.col_1_2} {res.grid.col_push_1_4} {res.grid.col_m_full} {res.grid.col_m_push_0}">

                    <h2 class="{res.style.stripeTitle}">Our quest</h2>
                    <p>Create, build applications that optimise process, habits and thinking, demonstrate value and
                        simplicity, and transform the way people work around the world.
                    </p>

                </div>
            </div>
        </section>

        <section class="{res.style.stripe} {res.style.light} {res.style.triangleBottom} {res.style.nextColored}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper} {res.style.focusBlock}">
                <div class="{res.grid.col} {res.grid.col_1_2} {res.grid.col_push_1_4} {res.grid.col_m_full} {res.grid.col_m_push_0}">

                    <h2 class="{res.style.stripeTitle}">Bee the best</h2>
                    <p>Our products allow you to be the best developper by simplifying your code, enhancing the user
                        experience and optimizing your time.
                    </p>

                </div>
            </div>
        </section>

        <section class="{res.style.stripe} {res.style.colored} {page.style.successStoryHolder}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper} {res.style.centered} {page.style.successStory}">
                <div class="{res.grid.col} {res.grid.col_1_2} {res.grid.col_push_1_4} {res.grid.col_m_full} {res.grid.col_m_push_0}">

                    <i class="{fonts.icons.iconGwtp}"></i>
