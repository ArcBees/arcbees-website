<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='res' type='com.arcbees.hive.client.resource.Resources'/>
    <ui:style>
        .outsideContainer {
            width: 100%;
            height: 100%;
        }

        .insideContainer {
            background-color: #b4c0c8;
            text-align: left;

            z-index: 10;
            position: relative;
            width: 950px;
            margin-right: auto;
            margin-left: auto;
        }

        .bg {
            background-color: #b4c0c8;

            width: 100%;
            height: 100%;
            position: fixed;
            z-index: 1;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.outsideContainer}">
        <div class="{style.bg}"></div>
        <div class="{style.insideContainer}">
            <g:HTMLPanel ui:field="header"/>
            <g:SimplePanel ui:field="navbarPanel"/>
            <g:HTMLPanel ui:field="mainContent" addStyleNames="{res.style.mainDegradeBgSprite}">
                <g:HTMLPanel ui:field="mainContent1" visible="false"/>
                <g:HTMLPanel ui:field="mainContent2" visible="false"/>
            </g:HTMLPanel>
            <g:SimplePanel ui:field="customers"/>
        <g:HTMLPanel ui:field="footer"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
