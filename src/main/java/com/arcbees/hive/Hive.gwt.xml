<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='hive'>
	<!-- Inherit the core Web Toolkit stuff. -->
	<inherits name="com.google.gwt.user.User" />
	<inherits name="com.google.gwt.inject.Inject" />
	<inherits name="com.google.gwt.query.Query" />

	<inherits name="com.gwtplatform.mvp.Mvp" />
	<inherits name="com.gwtplatform.dispatch.Dispatch" />
    <inherits name="com.arcbees.core.Mvp"/>

    <entry-point class="com.arcbees.hive.client.Hive" />

    <!-- French language, independent of country -->
    <extend-property name="locale" values="fr" />
    <!-- English language, independent of country -->
    <extend-property name="locale" values="en" />
    <set-property-fallback name="locale" value="en" />

	<!-- Specify the paths for translatable code -->
	<source path="client" />
	<source path="shared" />

    <!--TODO: remove this before uploading to appengine (only used to speed up permutations during debugging)-->
    <!--<set-property name="user.agent" value="safari"/>-->

	<define-configuration-property name="gin.ginjector" is-multi-valued="false" />
	<set-configuration-property name="gin.ginjector" value="com.arcbees.hive.client.gin.ClientGinjector" />
</module>
