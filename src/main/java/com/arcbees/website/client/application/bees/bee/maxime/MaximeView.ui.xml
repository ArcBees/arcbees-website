<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:seo="urn:import:com.arcbees.seo.widget"
        ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
        ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
        ui:generateLocales="default">

    <ui:with field="res" type="com.arcbees.website.client.resources.AppResources"/>
    <ui:with field="page" type="com.arcbees.website.client.resources.PageBeesResources"/>
    <ui:with field="fonts" type="com.arcbees.website.client.resources.FontResources"/>

    <g:HTMLPanel>

        <seo:SeoWidget>
            <seo:Title>
                <ui:msg description="SEO - Bees - Maxime - title">Maxime Mériouma Caron - Arcbees</ui:msg>
            </seo:Title>
            <seo:Description>
                <ui:msg description="SEO - Bees - Maxime - description">
                    Night Shadow Developer
                </ui:msg>
            </seo:Description>
            <seo:Og>
                <seo:OgImage height="241" width="285">http://www.arcbees.com/img/maxime-meriouma-caron.jpg</seo:OgImage>
            </seo:Og>
        </seo:SeoWidget>

        <div class="{page.style.bee} {page.style.bee1}">
            <div class="{page.style.beeHolder1}">
                <div class="{page.style.beeHolder2}">
                    <g:Image resource="{page.beeMaxime2}"></g:Image>
                </div>
            </div>
        </div>

        <h1>Maxime Mériouma Caron
            <span><ui:msg description="Maxime's title">Night Shadow Developer</ui:msg></span>
        </h1>

        <div class="{res.grid.row} {res.style.clearfix}">
            <div class="{res.grid.col} {res.grid.col_6} {res.grid.col_t_12} {page.style.colGauche}">
                <h2>
                    <ui:msg description="Professional achievements:">Professional achievements</ui:msg>
                </h2>
                <ul>
                    <ui:msg description="Maxime's prof achievements">
                        <li>ArcBees’ first employee.</li>
                        <li>Created JetBrains TeamCity plugins for GitHub / Stash / Bitbucket / Tomcat.</li>
                        <li>Ubisoft Scholarship awarded for the best game created in a <em>Video games programming</em> class.</li>
                    </ui:msg>
                </ul>
            </div>
            <div class="{res.grid.col} {res.grid.col_6} {res.grid.col_t_12} {page.style.colDroite}">
                <h2>
                    <ui:msg description="Personal achievements:">Personal achievements</ui:msg>
                </h2>
                <ul>
                    <ui:msg description="Maxime's pers achievements">
                        <li>Participated in an instrumental music competition playing double-bass.</li>
                        <li>Finished second in an AI competition at the 2012 CS Games.</li>
                    </ui:msg>
                </ul>
            </div>
        </div>

        <ul class="{page.style.social}">
            <li>
                <a href="http://ca.linkedin.com/pub/maxime-mériouma-caron/2a/40b/599" target="_blank">
                    <i class="{fonts.icons.iconLkd}"></i>
                    <span>Profil LinkedIn de Maxime Mériouma Caron</span>
                </a>
            </li>
            <li>
                <a href="https://plus.google.com/113742878333600737353/posts" target="_blank">
                    <i class="{fonts.icons.iconGPlus}"></i>
                    <span>Profil Google+ de Maxime Mériouma Caron</span>
                </a>
            </li>
        </ul>

    </g:HTMLPanel>
</ui:UiBinder>
