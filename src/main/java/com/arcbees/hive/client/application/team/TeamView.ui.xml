    <ui:style>
        .associatedBeesContainer {
            margin-bottom: 60px;
        }

        .aRow {
            margin-bottom: 10px;
        }

        .aRow img {
            float: left;

            border-radius: 7px;
            -moz-border-radius: 7px;
            -webkit-border-radius: 7px;
            overflow: hidden;

            margin-right: 10px;
        }

        .aRow > div > img + div {
            margin-top: 8px;
            font-size: 0.9em;
        }

        .aRow > div > div + div {
            font-size: 0.8em;
            color: #5B676F;
        }

        .associatedBeeRow > img {
            float: left;
            border-radius: 8px;
            -moz-border-radius: 8px;
            -webkit-border-radius: 8px;
            overflow: hidden;
            margin-right: 15px;
        }

        .associatedBeeRow > div {
            padding-top: 10px;
        }

        .clearBoth {
            clear: both;
        }

        .associatedBeeTitle > div + div {
            font-size: 0.9em;
            font-style: italic;
            color: #868F96;
        }

        h2:last-child {
            margin-top: 15px;
        }
