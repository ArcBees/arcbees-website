<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="com.arcbees.website.client.resources.AppResources"/>
    <ui:with field="page" type="com.arcbees.website.client.resources.PageWorkResources"/>
    <ui:with field="fonts" type="com.arcbees.website.client.resources.FontResources"/>

    <g:HTMLPanel styleName="{page.style.work}">

        <h1 class="{fonts.icons.iconArcbees} {res.style.withLogo}">
            <span>realisations</span>
        </h1>

        <section class="{res.style.stripe} {page.style.headerBg} {res.style.colored}">
        </section>

        <section class="{res.style.stripe}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">

                <div class="{res.grid.col} {res.grid.col_1_2}">
                    <h2 class="{res.style.sloganSm}">We work hard
                        <span>like
                            <strong>bees</strong>
                            <a href="#" class="{res.style.anchor}">#</a>
                        </span>
                    </h2>
                </div>

                <div class="{res.grid.col} {res.grid.col_1_2} {res.grid.col_m_full} {res.style.sloganSide}">
                    <p>
                        <strong>Arcbees est une entreprise regroupant plusieurs passionnés des technologies et de
                            l’architecture logiciel avides de résoudre les problèmes complexes et concrets auxquels
                            font face les entreprises.
                        </strong>
                    </p>
                    <p>Armés de cette vision,
                        <strong>Philippe Beaudoin et Christian Goudreau</strong>
                        ont conçu
                        <strong>GWT-Platform, un outil Open Source de création d’applications web</strong>
                        doté d’une incroyable capacité d’adaptation accélérant la vitesse de développement des
                        applications afin d’améliorer leur efficacité de production.
                    </p>
                </div>
            </div>
        </section>

        <section class="{page.style.realisations} {res.style.centered}">
            <h2>Recent works</h2>
            <div class="{res.style.stripe} {res.style.medium2}">
                <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                    <div class="{res.grid.col} {res.grid.col_1_2} {res.grid.col_m_full}">
                        <g:Image resource="{page.workLille}"/>
                        <h3>E-SCRIBE HOST</h3>
                        <p>Medical</p>
                    </div>
                    <div class="{res.grid.col} {res.grid.col_1_2} {res.grid.col_m_full}">
                        <g:Image resource="{page.workRoller}"/>
                        <h3>ROLER</h3>
                        <p>Banking</p>
                    </div>
                    <div class="{res.grid.col} {res.grid.col_1_2} {res.grid.col_m_full}">
                        <g:Image resource="{page.workKaam}"/>
                        <h3>Kaam</h3>
                        <p>Real estate</p>
                    </div>
                    <div class="{res.grid.col} {res.grid.col_1_2} {res.grid.col_m_full}">
                        <g:Image resource="{page.workGwt}"/>
                        <h3>GWT</h3>
                        <p>Technology</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="{page.style.trusted} {res.style.stripe} {res.style.centered}">
            <div class="{res.style.wrapper}">
                <h2>Trusted by</h2>
                <ul>
                    <li>
                        <a href="#">
                            <g:Image resource="{page.workTrustedRoler}"/>
                        </a>
                    </li>
                    <li>
                        <a href="http://zafin.com/" target="_blank">
                            <g:Image resource="{page.workTrustedZafin}"/>
                        </a>
                    </li>
                    <li>
                        <a href="http://www.lillegroup.com/" target="_blank">
                            <g:Image resource="{page.workTrustedLille}"/>
                        </a>
                    </li>
                    <li>
                        <a href="http://www.protorisk.com/main.html" target="_blank">
                            <g:Image resource="{page.workTrustedProtorisk}"/>
                        </a>
                    </li>
                    <li class="{page.style.last}">
                        <a href="http://cobratag.com/" target="_blank">
                            <g:Image resource="{page.workTrustedCobra}"/>
                        </a>
                    </li>
                    <li class="{page.style.last}">
                        <a href="http://www.swiftiq.com/" target="_blank">
                            <g:Image resource="{page.workTrustedStorePlacer}"/>
                        </a>
                    </li>
                    <li class="{page.style.last} {page.style.lastMobile}">
                        <a href="https://getbookedin.com/" target="_blank">
                            <g:Image resource="{page.workTrustedBooked}"/>
                        </a>
                    </li>
                    <li class="{page.style.last} {page.style.lastMobile}">
                        <a href="https://www.sceneverse.com/" target="_blank">
                            <g:Image resource="{page.workTrustedSceneverse}"/>
                        </a>
                    </li>
                </ul>
            </div>
        </section>

        <section class="{res.style.stripe} {res.style.stripeLast} {res.style.colored} {res.style.centered}">
            <div class="{res.grid.row} {res.style.clearfix} {res.style.wrapper}">
                <h2>Work with us</h2>
                <a href="#" class="{res.style.btn}">Get in touch with our Queenbee</a>
                <a href="#" data-icon="&#xe602;" class="{res.style.backTop}"></a>
            </div>
        </section>

    </g:HTMLPanel>
</ui:UiBinder>
