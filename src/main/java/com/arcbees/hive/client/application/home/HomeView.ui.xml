<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="en">
    <ui:with field="res" type="com.arcbees.hive.client.resource.Resources"/>
    <ui:with field="home" type="com.arcbees.hive.client.resource.home.HomeResources"/>
    <ui:with field='nameTokens' type='com.arcbees.hive.client.place.NameTokens'/>

    <g:HTMLPanel
            addStyleNames="{res.style.mainSectionContainer} {res.style.bulleBgHome} {res.style.cornerBottom} {home.style.home}">
        <h2>
            <ui:msg description="Home > Title">New web project? Optimize it with a multi-platform architecture!</ui:msg>
        </h2>
        <p class="{res.style.pHead} {home.style.firstParagraph}">
            <ui:msg description="Home > Subtitle">With ArcBees, your company may spend more time doing what it does best
                while we provide you simple and effective web solutions that meet your needs. We are your specialists in
                GWTP, UX design and Cloud Computing.
            </ui:msg>
        </p>
        <g:Image resource="{home.gwtHtml5Cloud}" addStyleNames="{res.style.imgCenter}"/>

        <div class="{home.style.sliderProductsContainer}">
            <div id="sliderProductsCarousel" class="{home.style.productsNav}">
                <div ui:field="divGWTP">
                    <g:Image resource="{home.sliderQuotesGauche}" addStyleNames="{res.style.imgLeft}"/>
                    <g:Image resource="{home.sliderProductGWTPlatform}" addStyleNames="{res.style.imgLeft}"/>
                    <p>
                        <ui:msg description="Home > Products > GWTP">The most popular MVP framework for GWT</ui:msg>
                    </p>
                    <g:Image resource="{home.sliderQuotesDroite}" addStyleNames="{res.style.imgRight} {res.style.imgQuoteRight}"/>
                    <a href="#{nameTokens.getProduct}">
                        <ui:msg description="Home > Products > Learn More">Click here to learn more about our
                            products...
                        </ui:msg>
                    </a>
                </div>
                <div ui:field="divGAE">
                    <g:Image resource="{home.sliderQuotesGauche}" addStyleNames="{res.style.imgLeft}"/>
                    <g:Image resource="{home.sliderProductGAEStudio}" addStyleNames="{res.style.imgLeft}"/>
                    <p>
                        <ui:msg description="Home > Products > GAE Studio">Still a society's secret, GAE Studio is coming
                            soon!
                        </ui:msg>
                    </p>
                    <g:Image resource="{home.sliderQuotesDroite}"
                             addStyleNames="{res.style.imgRight} {res.style.imgQuoteRight}"/>
                    <a href="#{nameTokens.getProduct}">
                        <ui:msg description="Home > Products > Learn More">Click here to learn more about our
                            products...
                        </ui:msg>
                    </a>
                </div>
                <div ui:field="divJukito">
                    <g:Image resource="{home.sliderQuotesGauche}" addStyleNames="{res.style.imgLeft}"/>
                    <g:Image resource="{home.sliderProductJukito}" addStyleNames="{res.style.imgLeft}"/>
                    <p>
                        <ui:msg description="Home > Products > Jukito">The perfect complement for your unit tests!
                        </ui:msg>
                    </p>
                    <g:Image resource="{home.sliderQuotesDroite}" addStyleNames="{res.style.imgRight} {res.style.imgQuoteRight}"/>
                    <a href="#{nameTokens.getProduct}">
                        <ui:msg description="Home > Products > Learn More">Click here to learn more about our
                            products...
                        </ui:msg>
                    </a>
                </div>
            </div>
            <div id="boutonsProducts">
                <g:Anchor ui:field="btGWTP" addStyleNames="{home.style.sliderProductsOn}"/>
                <g:Anchor ui:field="btGAE" addStyleNames="{home.style.sliderProductsButton}"/>
                <g:Anchor ui:field="btJukito" addStyleNames="{home.style.sliderProductsButton}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
