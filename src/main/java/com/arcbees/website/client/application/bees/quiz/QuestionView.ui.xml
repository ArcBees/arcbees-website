<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
        ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
        ui:generateLocales="default">

    <ui:import field="com.arcbees.website.client.NameTokens.*"/>

    <ui:with field="res" type="com.arcbees.website.client.resources.AppResources"/>
    <ui:with field="page" type="com.arcbees.website.client.resources.PageBeesResources"/>
    <ui:with field="fonts" type="com.arcbees.website.client.resources.FontResources"/>
    <ui:with field="animations" type="com.arcbees.website.client.resources.AnimationsResources"/>

    <g:HTMLPanel>
        <div ui:field="questions">
            <label>Q.
                <span ui:field="questionNumber"/>
            </label>
            <p ui:field="question"/>
            <label for="answer1">
                <g:Image ui:field="answer1Image" resource="{page.beeChristian}"/>
            </label>
            <input type="radio" name="quiz" id="answer1" value="answer1"/>
            <label for="answer2">
                <g:Image ui:field="answer2Image" resource="{page.beeChristian}"/>
            </label>
            <input type="radio" name="quiz" id="answer2" value="answer2"/>
            <label for="answer3">
                <g:Image ui:field="answer3Image" resource="{page.beeChristian}"/>
            </label>
            <input type="radio" name="quiz" id="answer3" value="answer3"/>
            <g:Button ui:field="nextButton" styleName="{res.style.btn}">Next</g:Button>
        </div>
        <div ui:field="quizFinished" class="{res.style.hidden}">
            <!--TODO: Add quiz finished content -->
            Quiz finished!
            <g:Button ui:field="share" styleName="{res.style.btn}">Share</g:Button>
            <g:Button ui:field="tryAgain" styleName="{res.style.btn}">Try again</g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
