<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ahive_socmedia='urn:import:com.arcbees.hive.client.application.common.socialmedia'
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="en">

    <ui:with field='nameTokens' type='com.arcbees.hive.client.place.NameTokens'/>
    <ui:with field='res' type='com.arcbees.hive.client.resource.Resources'/>
    <ui:style>
        .headerContainer {
            position: relative;
            width: 950px;
        }

        .rightLinkBox {
            position: absolute;
            right: 30px;
            top: 30px;
        }

        .localeSwitcher {
            text-decoration: none;
            color: #9f9f9f;
        }

        .localeSwitcher:HOVER {
            color: #5f5f5f;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.headerContainer} {res.style.headerBg} {res.style.cornerBottom}">
        <div class="{style.rightLinkBox}">
            <a ui:field="swithcLocaleHyperlink" href="?locale=fr" class="{style.localeSwitcher}">
                <ui:msg description="Locale hyperlink in header">Fran√ßais</ui:msg>
            </a>
            <ahive_socmedia:SocialMediaWidget ui:field="socialMediaWidget"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
