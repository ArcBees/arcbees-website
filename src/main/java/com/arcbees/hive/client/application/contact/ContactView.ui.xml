<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="en">

    <ui:with field="res" type="com.arcbees.hive.client.resource.Resources"/>
    <g:HTMLPanel addStyleNames="{res.style.mainSection} {res.style.bulleBgMain} {res.style.cornerBottom} ">
        <g:Image resource="{res.contactUS}"/>
        <a href="http://arcbees.wordpress.com/" target="_blank">Blog</a>,
        <a href="http://twitter.com/arcbees" target="_blank">Twitter</a>,
        <a href="http://www.linkedin.com/company/arcbees?trk=fc_badge" target="_blank">LinkedIn</a>
        <a href="http://www.facebook.com/group.php?gid=138324539537313" target="_blank">Facebook</a>.

        <p>
            <ui:msg description="Contact Us > Email">Email:</ui:msg>

            <a href="mailto:queenbee@arcbees.com">queenbee@arcbees.com</a>
            <br/>
            <ui:msg description="Contact Us > Phone">Phone:</ui:msg>
            418-473-1216
        </p>

        <g:TextBox ui:field="senderTextBox"/>
        <g:TextArea ui:field="contentsTextArea"/>
        <g:Button ui:field="sendButton">
            <ui:msg description="Contact Us > Send">Send</ui:msg>
        </g:Button>
    </g:HTMLPanel>
</ui:UiBinder>
