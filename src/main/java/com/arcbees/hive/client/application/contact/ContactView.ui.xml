<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ahive_socmedia='urn:import:com.arcbees.hive.client.application.common.socialmedia'
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="en">

    <ui:with field="res" type="com.arcbees.hive.client.resource.Resources"/>
    <ui:style>
        body .root {
            position: relative;
            height: 395px;
        }

        .contactInfo {
            position: absolute;
            left: 105px;
            top: 310px;
            font-size: 0.9em;
            line-height: 1.4em;
        }

        .message {
            position: absolute;
            left: 450px;
            top: 60px;
            width: 400px;
        }

        .message input {
            display: block;
            width: inherit;
            height: 40px;
            border: none;
            margin-bottom: 10px;
            padding-left: 10px;
            padding-right: 0px;
            color: #838383;
            font-family: Arial;
        }

        .message textarea {
            display: block;
            width: inherit;
            height: 200px;
            border: none;
            padding: 0px;
            padding-left: 10px;
            padding-top: 10px;
            margin-bottom: 10px;
            overflow-y: auto;
            resize: none;
            color: #838383;
            font-family: Arial;
        }

        .message button {
            float: right;
            width: 90px;
            height: 40px;
            font-size: 1.2em;
        }

        .socialMediaWidget {
            margin-top: 10px;
            margin-left: 10px;
        }

        .followUsContainer {
            font-size: 1.5em;
            margin-top: -20px;
            margin-left: -20px;
        }
    </ui:style>
    <g:HTMLPanel
            addStyleNames="{res.style.mainSectionContainer} {res.style.contactUS} {res.style.cornerBottom} {style.root}">
        <div class="{style.followUsContainer}">
            Follow us!
            <ahive_socmedia:SocialMediaWidget ui:field="socialMediaWidget" addStyleNames="{style.socialMediaWidget}"/>
        </div>
        <div class="{style.contactInfo}">
            <div>
                <a href="mailto:queenbee@arcbees.com">queenbee@arcbees.com</a>
            </div>
            <div>
                <ui:msg description="Contact Us > Toll-free">Toll-free:</ui:msg>
                1.877.635.1585
            </div>
            <div>
                <a href="http://goo.gl/maps/pUWyG" target="_blank">
                    250-2299 boul. Versant nord<br/>Québec, Québec G1N 4G2</a>
            </div>
        </div>
        <div class="{style.message}">
            <g:TextBox ui:field="senderEmailTextBox"/>
            <g:TextBox ui:field="senderNameTextBox"/>
            <g:TextArea ui:field="contentsTextArea"/>
            <g:Button ui:field="sendButton" addStyleNames="{res.style.cornerTopBottom} btn btn-warning">
                <ui:msg description="Contact Us > Send">Send</ui:msg>
            </g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>