<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .root {
            height: 120px;
            background-color: #ffffff;
        }

        .next {
            float: right;
        }

        .previous {
            float: left;
        }

        .carousel {
            margin: auto;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.root}">
        <div id="container">

            <div id="carousel" class="{style.carousel}">

            </div>
            <a href="#" id="ui-carousel-prev" class="{style.previous}">prev</a>
            <a href="#" id="ui-carousel-next" class="{style.next}">next</a>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
