<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        html {
            overflow-y: scroll;
        }

        body {
            font-family: Verdana;
            font-size: small;
            color: #4b3c30;
        }

        .hiveMain {
            margin-left: auto;
            margin-right: auto;
            width: 950px;
            text-align: left;
        }

        .mainContent {
            position: relative;
        }

        .mainContentSlot {
            position: absolute;
            width: 950px;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.hiveMain}">
        <g:HTMLPanel ui:field="header"/>
        <g:HTMLPanel ui:field="mainContent" styleName="{style.mainContent}">
            <g:HTMLPanel styleName="{style.mainContentSlot}" ui:field="mainContent1" visible="false"/>
            <g:HTMLPanel styleName="{style.mainContentSlot}" ui:field="mainContent2" visible="false"/>
        </g:HTMLPanel>
        <g:SimplePanel ui:field="customers"/>
        <g:HTMLPanel ui:field="footer"/>
    </g:HTMLPanel>
</ui:UiBinder>
