<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
        ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
        ui:generateLocales="default">

    <ui:with field="page" type="com.arcbees.website.client.resources.PageBeesResources"/>
    <ui:with field="fonts" type="com.arcbees.website.client.resources.FontResources"/>

    <g:HTMLPanel>

        <div class="{page.style.bee} {page.style.bee1}">
            <div class="{page.style.beeHolder1}">
                <div class="{page.style.beeHolder2}">
                    <g:Image resource="{page.beeChristian}"></g:Image>
                </div>
            </div>
        </div>

        <h1>Philippe Araujo
            <span><ui:msg description="Philippe Araujo's title">Business Knight</ui:msg></span>
        </h1>

        <p>
            <ui:msg description="Professional achievements:">Professional achievements:</ui:msg>
        </p>
        <ul>
            <ui:msg description="Philippe Araujo's prof achievements">
                <li>Developed a framework for gamification.</li>
                <li>Speaker for Entretien Jacques-Cartier in Lyon on smart cities.</li>
                <li>MBA Games winner with the Laval University team.</li>
                <li>My motto in life : Work hard, have fun, customers come first.</li>
            </ui:msg>
        </ul>

        <p>
            <ui:msg description="Personal achievements:">Personal achievements:</ui:msg>
        </p>
        <ul>
            <ui:msg description="Philippe Araujo's pers achievements">
                <li>I was the marriage officiant for my two best friends.</li>
                <li>Avid TV show hunter.</li>
                <li>I am my biggest fan!</li>
            </ui:msg>
        </ul>

        <ul class="{page.style.social}">
            <li>
                <a href="#">
                    <i class="{fonts.icons.iconLkd}"></i>
                    <span>Profil LinkedIn de Philippe Araujo</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="{fonts.icons.iconGPlus}"></i>
                    <span>Profil Google+ de Philippe Araujo</span>
                </a>
            </li>
        </ul>

    </g:HTMLPanel>
</ui:UiBinder>
