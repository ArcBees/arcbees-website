<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .blogPostTitle {
            font-size: 16px;
        }

        .blogPostDateAuthor {
            font-size: 10px;
            color: #908f8f;
        }

        .blogPostContent {
            margin-top: 13px;
            margin-bottom: 13px;
        }

        .blogPostLink {
            margin-bottom: 32px;
        }

        .blogPostLink a {
            color: #424401;
            text-decoration: none;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:HTML ui:field="blogPostTitle" addStyleNames="{style.blogPostTitle}"/>
        <g:HTML ui:field="blogPostDateAuthor" addStyleNames="{style.blogPostDateAuthor}"/>
        <g:HTML ui:field="blogPostContent" addStyleNames="{style.blogPostContent}"/>
        <g:HTML ui:field="blogPostLink" addStyleNames="{style.blogPostLink}"/>
    </g:HTMLPanel>
</ui:UiBinder> 
