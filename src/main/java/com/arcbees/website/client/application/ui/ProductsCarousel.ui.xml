<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
        ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
        ui:generateLocales="default">

    <ui:with field="nameTokens" type="com.arcbees.website.client.NameTokensConstants"/>
    <ui:with field="res" type="com.arcbees.website.client.resources.AppResources"/>
    <ui:with field="fonts" type="com.arcbees.website.client.resources.FontResources"/>

    <g:HTMLPanel tag="section" addStyleNames="{res.style.stripe} {res.style.medium2} {res.style.centered} {res.grid.col_m_hide}">
        <div class="{res.style.wrapper}">
            <h2>
                <ui:msg description="Products">Products</ui:msg>
            </h2>
            <p>
                <ui:msg description="Our hive of products offers you different possibilities. Use the ones that fits you.">
                    Our hive of products offers you different possibilities.
                    <span>Use the ones that fits you.</span>
                </ui:msg>
            </p>
            <div class="{res.style.productsCarousel}" ui:field="carousel">
                <ul>
                    <li>
                        <a href="#{nameTokens.GAE}" class="{fonts.icons.iconGae} {res.style.gae}">
                            <h3>GAE</h3>
                            <p>
                                <ui:msg description="Optimizing Google App Engine applications">
                                    Optimizing Google App Engine applications
                                </ui:msg>
                            </p>
                        </a>
                    </li>
                    <li>
                        <a href="#{nameTokens.JUKITO}" class="{fonts.icons.iconJukito} {res.style.jukito}">
                            <h3>JUKITO</h3>
                            <p>
                                <ui:msg description="Jukito - slogan">
                                    Use the power of dependency injection in all your tests
                                </ui:msg>
                            </p>
                        </a>
                    </li>
                    <li>
                        <a href="#{nameTokens.GWTP}" class="{fonts.icons.iconGwtp} {res.style.gwtp} {res.style.active}">
                            <h3>GWTP</h3>
                            <p>
                                <ui:msg description="The best Model-View-Presenter framework for GWT">
                                    The best Model-View-Presenter framework for GWT
                                </ui:msg>
                            </p>
                        </a>
                    </li>
                    <li>
                        <a href="#{nameTokens.CHOSEN}" class="{fonts.icons.iconChosen} {res.style.chosen}">
                            <h3>CHOSEN</h3>
                            <p>
                                <ui:msg description="Making select boxes">
                                    Making select boxes more user-friendly, the GWT way
                                </ui:msg>
                            </p>
                        </a>
                    </li>
                    <li>
                        <a href="#{nameTokens.GQUERY}" class="{fonts.icons.iconGquery} {res.style.gquery}">
                            <h3>GQUERY</h3>
                            <p>
                                <ui:msg description="A jQuery clone for GWT">
                                    A jQuery clone for GWT, and much more
                                </ui:msg>
                            </p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
